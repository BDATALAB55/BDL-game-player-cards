---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

// --- 設定値 ---
const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const RECURSIVE_API = `https://api.github.com/repos/${GITHUB_REPO}/git/trees/main?recursive=1&t=${Date.now()}`;
const IMAGE_BASE_URL = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/reports/B1`;

const cityNameMap = {
  "HOKKAIDO": "HOKKAIDO", "LEVANGA": "HOKKAIDO", "AKITA": "AKITA",
  "89ERS": "SENDAI", "SENDAI": "SENDAI", "ROBOTS": "IBARAKI",
  "BREX": "UTSUNOMIYA", "UTSUNOMIYA": "UTSUNOMIYA", "GUNMA": "GUNMA",
  "KOSHIGAYA": "KOSHIGAYA", "ACHIBA": "A CHIBA", "JETS": "CHIBA J",
  "ALVARK": "A TOKYO", "SHIBUYA": "SR SHIBUYA", "KAWASAKI": "KAWASAKI",
  "YOKOHAMA": "YOKOHAMA BC", "TOYAMA": "TOYAMA", "SANEN": "SAN-EN",
  "MIKAWA": "MIKAWA", "FENAGOYA": "FE NAGOYA", "NAGOYA": "NAGOYA D",
  "SHIGA": "SHIGA", "KYOTO": "KYOTO", "OSAKA": "OSAKA",
  "SHIMANE": "SHIMANE", "HIROSHIMA": "HIROSHIMA", "SAGA": "SAGA",
  "NAGASAKI": "NAGASAKI", "RYUKYU": "RYUKYU"
};

let reportGroups = [];

try {
  const res = await fetch(RECURSIVE_API, {
    headers: { "Accept": "application/vnd.github.v3+json" }
  });
  const data = await res.json();

  if (data && data.tree) {
    const allFiles = data.tree.filter(item => 
      item.path.includes('output/reports/B1/') && 
      item.path.toLowerCase().endsWith('.png')
    );

    const groups = {};
    allFiles.forEach(file => {
      const pathParts = file.path.split('/');
      const bIndex = pathParts.indexOf('B1');
      if (bIndex === -1 || pathParts.length <= bIndex + 2) return;
      
      const folderName = pathParts[bIndex + 1]; 
      const fileName = pathParts[bIndex + 2];
      if (!/^\d+$/.test(folderName)) return;

      const nameParts = fileName.replace('.png', '').split('_');
      const fullDate = nameParts[0] || ""; 
      const gameId = nameParts[1] || "";   
      const rawAway = nameParts[2] || "AWAY";
      const rawHome = nameParts[3] || "HOME";

      const displayAway = cityNameMap[rawAway.toUpperCase().replace(/[\s\-_]/g, '')] || rawAway;
      const displayHome = cityNameMap[rawHome.toUpperCase().replace(/[\s\-_]/g, '')] || rawHome;

      if (!groups[folderName]) {
        groups[folderName] = {
          id: folderName,
          date: `20${folderName.substring(0,2)}.${folderName.substring(2,4)}.${folderName.substring(4,6)}`,
          reports: []
        };
      }
      
      const cardFolderName = `game_${gameId}_${rawAway}_${rawHome}_${fullDate}`;
      groups[folderName].reports.push({
        path: `${IMAGE_BASE_URL}/${folderName}/${fileName}`,
        away: displayAway,
        home: displayHome,
        link: `/b1-cards?folder=${folderName}/${cardFolderName}`
      });
    });
    reportGroups = Object.values(groups).sort((a, b) => b.id.localeCompare(a.id));
  }
} catch (e) {
  console.error("Fetch Error:", e);
}

const teams = [
  { id: 'HOKKAIDO', color: 'bg-[#91ad10]' }, { id: 'SENDAI', color: 'bg-[#f7e000] text-black' }, { id: 'AKITA', color: 'bg-[#dd0055]' },
  { id: 'IBARAKI', color: 'bg-[#002e95]' }, { id: 'UTSUNOMIYA', color: 'bg-[#12284b]' }, { id: 'GUNMA', color: 'bg-[#ffda00] text-black' },
  { id: 'KOSHIGAYA', color: 'bg-[#610d0d]' }, { id: 'A CHIBA', color: 'bg-[#212836]' }, { id: 'CHIBA J', color: 'bg-[#e33216]' },
  { id: 'A TOKYO', color: 'bg-black border border-white/20' }, { id: 'SR SHIBUYA', color: 'bg-[#ffea00] text-black' }, { id: 'KAWASAKI', color: 'bg-[#7a1231]' },
  { id: 'YOKOHAMA BC', color: 'bg-[#000f31]' }, { id: 'TOYAMA', color: 'bg-[#e21f26]' }, { id: 'SAN-EN', color: 'bg-[#d31118]' },
  { id: 'MIKAWA', color: 'bg-[#3356b9]' }, { id: 'FE NAGOYA', color: 'bg-[#003882]' }, { id: 'NAGOYA D', color: 'bg-[#e31d20]' },
  { id: 'SHIGA', color: 'bg-[#1a448e]' }, { id: 'KYOTO', color: 'bg-[#5ea1b4]' }, { id: 'OSAKA', color: 'bg-[#d11c1d]' },
  { id: 'SHIMANE', color: 'bg-[#1c71be]' }, { id: 'HIROSHIMA', color: 'bg-[#f05a22]' }, { id: 'SAGA', color: 'bg-[#4da9df]' },
  { id: 'NAGASAKI', color: 'bg-[#2b3754]' }, { id: 'RYUKYU', color: 'bg-[#b69e63]' }
];

const todayDate = reportGroups.length > 0 ? reportGroups[0].date : "2026.01.25";
const latestReports = reportGroups.length > 0 ? reportGroups[0].reports : [];
---

<Layout title="B1 HOME | B-Data Lab">
  <main class="bg-[#373A36] min-h-screen text-white pb-32 overflow-x-hidden relative">
    
    <header class="sticky top-0 z-50 bg-[#373A36]/90 backdrop-blur-md border-b border-white/10 p-6">
      <div class="max-w-6xl mx-auto flex justify-between items-end">
        <h1 class="text-5xl md:text-7xl font-black uppercase leading-none">B1</h1>
        <h2 class="text-xl md:text-3xl font-black uppercase text-[#2E3C57]" style="-webkit-text-stroke: 1px white;">BDATALAB</h2>
      </div>
    </header>

    <div class="max-w-6xl mx-auto px-6 mt-12">
      <section>
        <div class="flex justify-between items-end mb-8">
          <div>
            <h2 class="text-4xl font-black uppercase tracking-tighter mb-4">GAME REPORT</h2>
            <p class="text-blue-500 text-[10px] font-black uppercase">Latest: {todayDate}</p>
          </div>
          <p class="text-7xl font-black italic opacity-20">{latestReports.length}</p>
        </div>

        <div class="flex overflow-x-auto gap-8 no-scrollbar snap-x pb-4">
          {latestReports.map(r => (
            <div class="flex-none w-[280px] snap-center">
              <div class="rounded-2xl overflow-hidden border border-white/10 aspect-[3/4.2]">
                <img src={r.path} alt="" class="w-full h-full object-cover" loading="lazy" />
              </div>
              <div class="mt-4 text-center">
                <a href={r.link} class="inline-block px-6 py-2 rounded-full bg-blue-600 font-black text-[12px] uppercase hover:scale-105 transition-transform">
                  {r.away} vs {r.home}
                </a>
              </div>
            </div>
          ))}
          {latestReports.length === 0 && <p class="opacity-50">No reports found.</p>}
        </div>
      </section>

      <section class="mt-24">
        <h2 class="text-4xl font-black uppercase mb-8">TEAM</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-3">
          {teams.map(t => (
            <a href={`/b1-team?team=${t.id}`} class={`${t.color} rounded-xl p-4 text-center font-black hover:scale-105 transition-transform`}>
              {t.id}
            </a>
          ))}
        </div>
      </section>
    </div>

    <a href="/" class="fixed bottom-8 right-8 bg-white text-black px-6 py-3 rounded-full font-black text-[12px] uppercase shadow-xl hover:scale-105 transition-transform">Back</a>
  </main>
</Layout>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>