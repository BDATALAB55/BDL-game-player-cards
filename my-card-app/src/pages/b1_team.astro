---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

const { searchParams } = Astro.url;
const teamId = searchParams.get('team') || 'UTSUNOMIYA'; // デフォルト値

const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const RECURSIVE_API = `https://api.github.com/repos/${GITHUB_REPO}/git/trees/main?recursive=1&t=${Date.now()}`;
const IMAGE_BASE_URL = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/reports/B1`;
const token = process.env.GITHUB_TOKEN;

// B.LEAGUE Team Info (NBA Style config)
const teamInfo = {
  HOKKAIDO: { city: "Levanga", name: "Hokkaido", color: "#009944" },
  SENDAI: { city: "Sendai", name: "89ers", color: "#FFD700" },
  AKITA: { city: "Akita", name: "Happinets", color: "#E60012" },
  IBARAKI: { city: "Ibaraki", name: "Robots", color: "#00479d" },
  UTSUNOMIYA: { city: "Utsunomiya", name: "Brex", color: "#002d62" },
  GUNMA: { city: "Gunma", name: "Crane Thunders", color: "#FFD400" },
  KOSHIGAYA: { city: "Koshigaya", name: "Alphas", color: "#8B002A" },
  CHIBAJ: { city: "Chiba", name: "Jets", color: "#E20613" },
  ATOKYO: { city: "Alvark", name: "Tokyo", color: "#E20011" },
  SRSHIBUYA: { city: "Sunrockers", name: "Shibuya", color: "#FFD400" },
  KAWASAKI: { city: "Kawasaki", name: "Brave Thunders", color: "#8E0C1F" },
  YOKOHAMA: { city: "Yokohama", name: "B-Corsairs", color: "#002D62" },
  SANEN: { city: "San-En", name: "NeoPhoenix", color: "#E50012" },
  MIKAWA: { city: "Seahorses", name: "Mikawa", color: "#005496" },
  FENAGOYA: { city: "FE", name: "Nagoya", color: "#1D2088" },
  NAGOYAD: { city: "Nagoya", name: "Dolphins", color: "#E20011" },
  SHIGA: { city: "Shiga", name: "Lakes", color: "#0055A4" },
  KYOTO: { city: "Kyoto", name: "Hannaryz", color: "#00A0E9" },
  OSAKA: { city: "Osaka", name: "Evessa", color: "#E20011" },
  SHIMANE: { city: "Shimane", name: "Susanoo Magic", color: "#005EB8" },
  HIROSHIMA: { city: "Hiroshima", name: "Dragonflies", color: "#E64400" },
  SAGA: { city: "Saga", name: "Ballooners", color: "#00A0E9" },
  NAGASAKI: { city: "Nagasaki", name: "Velca", color: "#002244" },
  RYUKYU: { city: "Ryukyu", name: "Golden Kings", color: "#B3995D" },
};

const currentTeam = teamInfo[teamId] || { city: "B.LEAGUE", name: "TEAM", color: "#000000" };

let allTeamReports = [];
let availableDatesMap = {};

try {
  const res = await fetch(RECURSIVE_API, {
    headers: {
      ...(token ? { "Authorization": `token ${token}` } : {}),
      "Accept": "application/vnd.github.v3+json"
    }
  });
  const data = await res.json();

  if (data.tree) {
    const reportFiles = data.tree.filter(item => 
      item.path.includes('output/reports/B1/') && 
      item.path.endsWith('.png')
    );

    reportFiles.forEach(file => {
      const parts = file.path.split('/');
      const fileName = parts[parts.length - 1];
      const folderName = parts[parts.length - 2];
      
      // B.LEAGUEのファイル命名規則に合わせる
      if (fileName.toUpperCase().includes(teamId)) {
        const reportObj = {
          id: folderName,
          date: `20${folderName.substring(0,2)}.${folderName.substring(2,4)}.${folderName.substring(4,6)}`,
          path: `${IMAGE_BASE_URL}/${folderName}/${fileName}`,
          fileName: fileName,
          link: `/b1_cards?folder=${folderName}/${fileName.replace('.png', '')}`
        };
        allTeamReports.push(reportObj);
        if (!availableDatesMap[folderName]) availableDatesMap[folderName] = reportObj.link;
      }
    });
    allTeamReports.sort((a, b) => b.id.localeCompare(a.id));
  }
} catch (e) {
  console.error("Fetch failed:", e);
}
---

<Layout title={`${currentTeam.name} | B-Data Lab`}>
  <main class="bg-[#111111] min-h-screen text-white font-avenir pb-40 overflow-x-hidden">
    
    <header class="pt-20 pb-10 px-6 border-b-8 shadow-2xl relative bg-gradient-to-b from-black/50 to-transparent" style={`border-color: ${currentTeam.color}`}>
      <div class="max-w-7xl mx-auto flex flex-col md:flex-row md:items-end justify-between gap-6">
        <div>
          <h2 class="text-2xl font-medium uppercase tracking-[0.3em] opacity-60 leading-none mb-2">
            {currentTeam.city}
          </h2>
          <h1 class="text-6xl md:text-8xl font-black uppercase tracking-tighter leading-[0.85]">
            {currentTeam.name}
          </h1>
        </div>
        
        <div class="flex items-center gap-6 pb-2 border-l-2 border-white/10 pl-6 h-fit">
          <div class="text-center">
            <span class="block text-4xl font-black italic leading-none">{allTeamReports.length}</span>
            <span class="text-[10px] font-bold opacity-40 uppercase tracking-widest">Reports</span>
          </div>
          <div class="h-10 w-[1px] bg-white/10"></div>
          <div class="flex flex-col gap-1">
            <span class="text-[10px] font-black tracking-widest opacity-40 uppercase">BDATALAB</span>
            <div class="flex gap-3">
              <a href="https://x.com/BDataLab5x5" class="hover:text-blue-400 transition-colors"><svg class="w-4 h-4 fill-current" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg></a>
            </div>
          </div>
        </div>
      </div>
    </header>

    <div class="max-w-7xl mx-auto px-6 mt-16">
      
      <section>
        <div class="flex items-center gap-4 mb-12">
          <div class="h-[2px] flex-grow bg-white/5"></div>
          <h3 class="text-[12px] font-black uppercase tracking-[0.5em] opacity-30 italic">Season Reports</h3>
          <div class="h-[2px] flex-grow bg-white/5"></div>
        </div>

        {allTeamReports.length > 0 ? (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-y-16 gap-x-10">
            {allTeamReports.map(r => (
              <div class="group">
                <div class="mb-4 flex justify-between items-end border-b border-white/5 pb-2">
                  <span class="text-[13px] font-black tracking-tighter text-white/40">{r.date}</span>
                  <span class="text-[10px] font-bold uppercase tracking-widest text-blue-500">Official Card</span>
                </div>
                
                <a href={`/b_players?name=REPORT&img=${encodeURIComponent(r.path)}`} class="block relative aspect-[3/4.2] overflow-hidden rounded-sm shadow-2xl transition-all duration-500 group-hover:scale-[1.02] group-hover:shadow-[0_20px_50px_rgba(0,0,0,0.5)]">
                  <img src={r.path} alt="Game Report" class="w-full h-full object-cover" loading="lazy" />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex flex-col justify-end p-8">
                    <span class="text-[11px] font-black uppercase tracking-widest border border-white/20 w-fit px-4 py-2 bg-black/40 backdrop-blur-md">View Details</span>
                  </div>
                </a>

                <div class="mt-8">
                  <a href={r.link} class="w-full flex items-center justify-center py-4 bg-white/5 border border-white/10 rounded-sm hover:bg-white text-white hover:text-black font-black uppercase tracking-widest text-[11px] transition-all">
                    Show Player Cards
                  </a>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="py-40 text-center border border-dashed border-white/5 bg-white/[0.02]">
            <p class="text-white/20 font-black uppercase tracking-widest">No reports archived</p>
          </div>
        )}
      </section>

      <section class="mt-32 max-w-md mx-auto">
        <div class="mb-10 text-center">
          <h3 class="text-[11px] font-black uppercase tracking-[0.4em] text-white/20">Archived Schedule</h3>
        </div>
        <div id="calendar" class="bg-black/50 p-8 rounded-sm border border-white/5 shadow-2xl"></div>
      </section>
    </div>

    <div class="fixed bottom-10 left-10 z-50">
      <button onclick="history.back()" class="w-14 h-14 bg-black/80 backdrop-blur-xl border border-white/10 rounded-full flex items-center justify-center hover:bg-white hover:text-black transition-all shadow-2xl">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/></svg>
      </button>
    </div>
  </main>
</Layout>

<script is:inline define:vars={{ availableDatesMap, currentTeam }}>
  let currentY = 2026;
  let currentM = 0;
  const dates = Object.keys(availableDatesMap).sort((a,b) => b.localeCompare(a));
  
  if (dates.length > 0) {
    currentY = 2000 + parseInt(dates[0].substring(0,2));
    currentM = parseInt(dates[0].substring(2,4)) - 1;
  }

  window.changeMonth = function(delta) {
    currentM += delta;
    if (currentM < 0) { currentM = 11; currentY--; }
    else if (currentM > 11) { currentM = 0; currentY++; }
    renderCalendar(currentY, currentM);
  };

  function renderCalendar(y, m) {
    const calendarEl = document.getElementById('calendar');
    const monthNames = ["JAN", "FEB", "MAR", "APR", "MAY", "JUN", "JUL", "AUG", "SEP", "OCT", "NOV", "DEC"];
    const firstDay = new Date(y, m, 1).getDay();
    const daysInMonth = new Date(y, m + 1, 0).getDate();
    
    let html = `
      <div class="flex justify-between items-center mb-8">
        <button onclick="changeMonth(-1)" class="opacity-30 hover:opacity-100">←</button>
        <div class="font-black text-[14px] tracking-[0.2em] uppercase">${monthNames[m]} ${y}</div>
        <button onclick="changeMonth(1)" class="opacity-30 hover:opacity-100">→</button>
      </div>
      <div class="grid grid-cols-7 gap-1 text-center text-[8px] font-black text-white/20 mb-4">
        <div>SUN</div><div>MON</div><div>TUE</div><div>WED</div><div>THU</div><div>FRI</div><div>SAT</div>
      </div>
      <div class="grid grid-cols-7 gap-2">`;
      
    for (let i = 0; i < firstDay; i++) html += `<div></div>`;
    for (let d = 1; d <= daysInMonth; d++) {
      const dateStr = `${String(y).substring(2)}${String(m + 1).padStart(2, '0')}${String(d).padStart(2, '0')}`;
      const link = availableDatesMap[dateStr];
      const activeStyle = link ? `background-color: ${currentTeam.color}` : 'opacity-10';
      
      html += `
        <div class="aspect-square flex items-center justify-center">
          ${link ? 
            `<a href="${link}" class="w-full h-full flex items-center justify-center text-[11px] font-black rounded-sm transition-all hover:scale-110" style="${activeStyle}">${d}</a>` : 
            `<span class="text-[11px] font-bold opacity-20">${d}</span>`
          }
        </div>`;
    }
    calendarEl.innerHTML = html + `</div>`;
  }
  renderCalendar(currentY, currentM);
</script>

<style>
  @import url('https://fonts.cdnfonts.com/css/avenir-next-lt-pro');
  :root { font-family: 'Avenir Next LT Pro', sans-serif; }
</style>