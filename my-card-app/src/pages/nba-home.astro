            <div class="flex-none w-[220px] snap-center aspect-[3/4] bg-black/40 border border-white/5 rounded-2xl flex flex-col items-center justify-center gap-4 group transition-all hover:bg-black/60">
              <div class="text-[40px] font-black text-white/10 group-hover:text-white/20 transition-colors">{i + 1}</div>
              <span class="text-[10px] font-black tracking-[0.3em] uppercase text-white/30">Coming Soon</span>
            </div>
          ))}
        </div>
      </section>

      <section class="mt-32">
        <h2 class="text-4xl font-black uppercase tracking-tighter mb-8">Today's RANK 10</h2>
        <div class="flex gap-3 mb-10 overflow-x-auto no-scrollbar pb-2">
          {['PTS', 'REB', 'AST'].map((stat, i) => (
            <button data-tab="rank" data-target={stat.toLowerCase()} class={`rank-btn flex-none px-10 py-4 rounded-full text-[12px] font-black tracking-widest uppercase transition-all hover:scale-105 ${i === 0 ? 'bg-blue-600 text-white shadow-lg shadow-blue-900/20' : 'bg-black/20 text-white/60 border border-white/5'}`}>
              {stat}
            </button>
          ))}
        </div>
        <div id="rank-container" class="flex overflow-x-auto gap-6 no-scrollbar snap-x pb-4">
          {Array.from({ length: 10 }).map((_, i) => (
            <div class="flex-none w-[260px] snap-center aspect-[3/4.2] bg-black/40 border border-white/5 rounded-2xl flex flex-col items-center justify-center gap-4 relative overflow-hidden group">
