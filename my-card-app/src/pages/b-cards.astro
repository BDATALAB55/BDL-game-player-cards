---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

// 1. URLから ?folder= を取得
const { searchParams } = Astro.url;
const queryFolder = searchParams.get('folder') || ""; 
// 例: "260104/20260104_505093_89ERS_BREX"

// --- 設定 ---
const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const token = process.env.GITHUB_TOKEN;

// 2. URLの文字列から直接情報を抜き出す (APIに頼らない)
const segments = queryFolder.split('/');
const rawDate = segments[0] || ""; // "260104"
const matchDirName = segments[1] || ""; // "20260104_505093_89ERS_BREX"

// チーム名をURLから直接抽出 (3番目と4番目の要素)
const folderParts = matchDirName.split('_');
// URLが "game_" で始まる場合と日付で始まる場合の両方に対応
let teamAway = "AWAY";
let teamHome = "HOME";

if (matchDirName.startsWith('game_')) {
  teamAway = folderParts[2] || "AWAY";
  teamHome = folderParts[3] || "HOME";
} else {
  teamAway = folderParts[2] || "AWAY";
  teamHome = folderParts[3] || "HOME";
}

// 試合IDを抽出
const gameIdMatch = matchDirName.match(/\d{6}/);
const gameId = gameIdMatch ? gameIdMatch[0] : "";

// --- 3. 正しいフォルダパスの構築 ---
const correctedDateFolder = rawDate.startsWith("B1 ") ? rawDate : `B1 ${rawDate}`;
const githubBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/Bplayers/B1`;

// APIでそのフォルダ内のファイル一覧だけを取得
// ここで matchDirName そのものではなく、APIで「本物のフォルダ名」を探す
let finalMatchDir = matchDirName;
let images = [];

try {
  const listApi = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/Bplayers/B1/${encodeURIComponent(correctedDateFolder)}`;
  const listRes = await fetch(listApi, {
    headers: token ? { "Authorization": `token ${token}` } : {}
  });
  const items = await listRes.json();

  if (Array.isArray(items)) {
    // 試合IDが一致するフォルダを確実に見つける
    const found = items.find(item => item.name.includes(gameId));
    if (found) {
      finalMatchDir = found.name;
      // チーム名もフォルダ名から再取得して上書き（確実性を高める）
      const fParts = finalMatchDir.split('_');
      teamAway = fParts[2] || teamAway;
      teamHome = fParts[3] || teamHome;
    }
  }

  // 画像ファイル取得
  const apiURL = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/Bplayers/B1/${encodeURIComponent(correctedDateFolder)}/${encodeURIComponent(finalMatchDir)}`;
  const res = await fetch(apiURL, {
    headers: token ? { "Authorization": `token ${token}` } : {}
  });
  const files = await res.json();

  if (Array.isArray(files)) {
    images = files
      .filter(f => f.name.endsWith('.png'))
      .map(f => ({
        path: `${githubBase}/${correctedDateFolder}/${finalMatchDir}/${f.name}`,
        name: f.name,
        teamPrefix: f.name.split('_')[0]
      }));
  }
} catch (e) {
  console.error("Fetch Error:", e);
}

// データをチームごとに分ける
const awayData = images.filter(img => img.name.startsWith(teamAway)).sort();
const homeData = images.filter(img => img.name.startsWith(teamHome)).sort();

// 日付表示
const formattedDate = rawDate ? `20${rawDate.substring(0,2)}.${rawDate.substring(2,4)}.${rawDate.substring(4,6)}` : "";

// レポート画像
const reportImagePath = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/reports/B1/${rawDate}/${gameId}.png`;
---

<Layout title={`${teamAway} vs ${teamHome}`}>
  <div class="bg-[#1a1a1a] min-h-screen text-white font-avenir pb-32">
    
    <header class="pt-12 pb-6 px-8 text-center border-b border-white/5">
      <h1 class="text-2xl font-black uppercase tracking-[0.2em]">BDL B-Cards</h1>
      <p class="text-gray-600 text-[10px] font-bold tracking-[0.4em] mt-3 uppercase">{formattedDate}</p>
    </header>

    <div class="py-10 space-y-16">
      <section class="px-8 text-center">
        <div class="flex items-center justify-center gap-4 mb-8">
          <span class="text-xl font-black">{teamAway}</span>
          <span class="text-gray-600 italic font-medium text-sm">vs</span>
          <span class="text-xl font-black">{teamHome}</span>
        </div>
        
        <div class="w-full md:w-[60%] mx-auto rounded-2xl overflow-hidden border border-white/10 shadow-2xl">
           <img src={reportImagePath} class="w-full h-auto" onerror="this.parentElement.style.display='none'" />
        </div>
      </section>

      {[
        { name: teamAway, data: awayData },
        { name: teamHome, data: homeData }
      ].map((team) => team.data.length > 0 && (
        <section>
          <div class="px-8 mb-6">
            <span class="bg-blue-600 text-white px-6 py-2 text-sm font-black uppercase tracking-widest rounded-full">
              {team.name}
            </span>
          </div>

          <div class="flex overflow-x-auto snap-x snap-mandatory gap-6 px-8 no-scrollbar">
            {team.data.map((p) => (
              <div class="flex-none w-[80vw] max-w-[340px] snap-center">
                <div class="cursor-pointer card-trigger rounded-2xl overflow-hidden border border-white/10 shadow-xl" data-img={p.path}>
                  <img src={p.path} alt={p.name} class="w-full h-auto block" loading="lazy" />
                </div>
                <div class="mt-4 px-2">
                  <div class="w-full py-3 rounded-full bg-white/5 border border-white/10 text-center text-[11px] font-bold tracking-widest uppercase">
                    {p.name.split('_').slice(2).join(' ').replace('.png', '')}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </section>
      ))}
    </div>

    <div id="modal" class="fixed inset-0 bg-black/95 z-50 hidden flex-col items-center justify-center p-6">
      <div id="close" class="absolute top-8 right-8 text-white text-4xl cursor-pointer p-4">&times;</div>
      <img id="modal-img" src="" class="max-w-full max-h-[80vh] rounded-xl shadow-2xl mb-8" />
      <a id="download-btn" href="" download class="bg-blue-600 text-white px-12 py-4 rounded-full font-black uppercase tracking-widest text-[11px]">Download</a>
    </div>

    <div class="fixed bottom-8 left-0 right-0 flex justify-center z-40">
      <a href="/b-reports" class="bg-white/10 backdrop-blur-lg text-white px-10 py-4 rounded-full font-black text-[11px] uppercase tracking-widest border border-white/20 shadow-2xl">
        Back to Archive
      </a>
    </div>
  </div>
</Layout>

<script>
  const modal = document.getElementById('modal');
  const modalImg = document.getElementById('modal-img') as HTMLImageElement;
  const close = document.getElementById('close');
  const downloadBtn = document.getElementById('download-btn') as HTMLAnchorElement;

  document.querySelectorAll('.card-trigger').forEach(card => {
    card.addEventListener('click', () => {
      const src = card.getAttribute('data-img');
      if (src && modalImg && downloadBtn) {
        modalImg.src = src;
        downloadBtn.href = src;
        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });

  close?.addEventListener('click', () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
  });
</script>

<style is:global>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>