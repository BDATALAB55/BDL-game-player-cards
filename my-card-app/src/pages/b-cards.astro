---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

// 1. URLからパラメータ取得
const { searchParams } = Astro.url;
const queryFolder = searchParams.get('folder') || ""; 

// --- 設定 ---
const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const token = process.env.GITHUB_TOKEN;

// 2. 【最重要】URLの文字列から直接チーム名を解析する（APIより信頼する）
// 例: "260103/game_505094_ACHIBA_SHIMANE_20260103"
const segments = queryFolder.split('/');
const datePart = segments[0] || ""; 
const urlMatchDir = segments[1] || "";

const folderParts = urlMatchDir.split('_');
// フォルダ名(game_ID_AWAY_HOME_DATE)から抽出
const teamAway = folderParts[2] || "AWAY"; 
const teamHome = folderParts[3] || "HOME"; 
const gameIdMatch = urlMatchDir.match(/\d{6}/);
const gameId = gameIdMatch ? gameIdMatch[0] : "";

// --- 3. データ取得 (キャッシュを完全に殺す) ---
const correctedDateFolder = `B1 ${datePart}`;
const githubRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/Bplayers/B1/${encodeURIComponent(correctedDateFolder)}/${encodeURIComponent(urlMatchDir)}`;

let images = [];

try {
  // キャッシュを無効化するためにランダムなクエリ (?t=...) を追加
  const apiURL = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/Bplayers/B1/${encodeURIComponent(correctedDateFolder)}/${encodeURIComponent(urlMatchDir)}?t=${Date.now()}`;
  
  const res = await fetch(apiURL, {
    headers: {
      ...(token ? { "Authorization": `token ${token}` } : {}),
      "Cache-Control": "no-cache" // キャッシュさせない
    }
  });
  
  const files = await res.json();

  if (Array.isArray(files)) {
    images = files
      .filter(f => f.name.endsWith('.png'))
      .map(f => ({
        path: `${githubRawBase}/${f.name}`,
        name: f.name,
        team: f.name.split('_')[0]
      }));
  }
} catch (e) {
  console.error("Fetch Error:", e);
}

// 4. 【確実なフィルタリング】さっきURLから抜いたチーム名で分ける
const awayPlayers = images.filter(img => img.team === teamAway);
const homePlayers = images.filter(img => img.team === teamHome);

const formattedDate = datePart ? `20${datePart.substring(0,2)}.${datePart.substring(2,4)}.${datePart.substring(4,6)}` : "";
---

<Layout title={`${teamAway} vs ${teamHome}`}>
  <div class="bg-[#111111] min-h-screen text-white font-avenir pb-32">
    
    <header class="pt-12 pb-6 px-8 text-center border-b border-white/5">
      <h1 class="text-xl font-black uppercase tracking-[0.3em] text-blue-500">BDL B-Cards</h1>
      <div class="mt-4 flex items-center justify-center gap-4">
        <span class="text-lg font-bold">{teamAway}</span>
        <span class="text-gray-600 text-xs italic">vs</span>
        <span class="text-lg font-bold">{teamHome}</span>
      </div>
    </header>

    <div class="py-10 space-y-20">
      
      {awayPlayers.length > 0 && (
        <section>
          <div class="px-8 mb-6 flex justify-between items-end">
            <span class="text-3xl font-black italic opacity-10 absolute left-4 -mt-4 uppercase">{teamAway}</span>
            <span class="bg-white text-black px-4 py-1 text-[10px] font-black uppercase tracking-widest relative z-10">Away Team</span>
          </div>
          <div class="flex overflow-x-auto snap-x snap-mandatory gap-6 px-8 no-scrollbar">
            {awayPlayers.map((p) => (
              <div class="flex-none w-[80vw] max-w-[340px] snap-center">
                <div class="cursor-pointer card-trigger group" data-img={p.path}>
                  <div class="rounded-2xl overflow-hidden border border-white/10 shadow-2xl transition-all duration-300 group-hover:border-blue-500/50">
                    <img src={p.path} alt={p.name} class="w-full h-auto block" loading="lazy" />
                  </div>
                  <p class="mt-4 text-center text-[10px] text-gray-500 font-bold tracking-widest uppercase">{p.name.replace('.png','')}</p>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      {homePlayers.length > 0 && (
        <section>
          <div class="px-8 mb-6 flex justify-between items-end">
             <span class="text-3xl font-black italic opacity-10 absolute left-4 -mt-4 uppercase">{teamHome}</span>
             <span class="bg-blue-600 text-white px-4 py-1 text-[10px] font-black uppercase tracking-widest relative z-10">Home Team</span>
          </div>
          <div class="flex overflow-x-auto snap-x snap-mandatory gap-6 px-8 no-scrollbar">
            {homePlayers.map((p) => (
              <div class="flex-none w-[80vw] max-w-[340px] snap-center">
                <div class="cursor-pointer card-trigger group" data-img={p.path}>
                  <div class="rounded-2xl overflow-hidden border border-white/10 shadow-2xl transition-all duration-300 group-hover:border-blue-500/50">
                    <img src={p.path} alt={p.name} class="w-full h-auto block" loading="lazy" />
                  </div>
                  <p class="mt-4 text-center text-[10px] text-gray-500 font-bold tracking-widest uppercase">{p.name.replace('.png','')}</p>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}
    </div>

    <div id="modal" class="fixed inset-0 bg-black/98 z-50 hidden flex-col items-center justify-center p-6 backdrop-blur-xl">
      <div id="close" class="absolute top-8 right-8 text-white/50 text-4xl cursor-pointer p-4 hover:text-white transition-colors">&times;</div>
      <img id="modal-img" src="" class="max-w-full max-h-[82vh] rounded-xl shadow-2xl mb-10" />
      <a id="download-btn" href="" download class="bg-blue-600 hover:bg-blue-500 text-white px-16 py-4 rounded-full font-black uppercase tracking-[0.2em] text-[11px] transition-all shadow-lg shadow-blue-600/20">Download Card</a>
    </div>

    <div class="fixed bottom-8 left-0 right-0 flex justify-center z-40">
      <a href="/b-reports" class="bg-white/5 hover:bg-white/10 backdrop-blur-md text-white px-10 py-4 rounded-full font-black text-[10px] uppercase tracking-widest border border-white/10 transition-all">
        Back to Archives
      </a>
    </div>
  </div>
</Layout>

<script>
  const modal = document.getElementById('modal');
  const modalImg = document.getElementById('modal-img') as HTMLImageElement;
  const close = document.getElementById('close');
  const downloadBtn = document.getElementById('download-btn') as HTMLAnchorElement;

  document.querySelectorAll('.card-trigger').forEach(card => {
    card.addEventListener('click', () => {
      const src = card.getAttribute('data-img');
      if (src && modalImg && downloadBtn) {
        modalImg.src = src;
        downloadBtn.href = src;
        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });

  close?.addEventListener('click', () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
  });
</script>

<style is:global>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>