---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

const { searchParams } = Astro.url;
const queryFolder = searchParams.get('folder') || "";

const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const token = process.env.GITHUB_TOKEN;

// パス解析
const segments = queryFolder.split('/');
const dateId = segments[0] || "";  
const urlGameDir = segments[1] || ""; 

const githubRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/Bplayers/B1`;
// レポート画像用のベースパス
const reportsRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/reports/B1/${dateId}`;

let awayData = [];
let homeData = [];
let teamHome = "HOME";
let teamAway = "AWAY";
let reportImagePath = "";
let gameDir = "";

const formattedDate = dateId ? `20${dateId.substring(0,2)}.${dateId.substring(2,4)}.${dateId.substring(4,6)}` : "NO DATA";

try {
  // 1. 正しいゲームフォルダを探す
  const apiParentURL = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/Bplayers/B1/${dateId}`;
  const parentRes = await fetch(`${apiParentURL}?t=${Date.now()}`, {
    headers: token ? { "Authorization": `token ${token}` } : {}
  });
  const folders = await parentRes.json();
  
  if (Array.isArray(folders)) {
    // GameID (例: 505093) を抽出
    const gameId = urlGameDir.split('_').find(s => s.length === 6 && /^\d+$/.test(s));
    const targetFolder = folders.find(f => f.type === 'dir' && f.name.includes(gameId));
    
    if (targetFolder) {
      gameDir = targetFolder.name;
      
      // 2. 選手ファイル取得
      const filesRes = await fetch(`${targetFolder.url}&t=${Date.now()}`, {
        headers: token ? { "Authorization": `token ${token}` } : {}
      });
      const files = await filesRes.json();

      if (Array.isArray(files)) {
        const nameParts = gameDir.split('_');
        teamAway = nameParts[2] || "AWAY"; 
        teamHome = nameParts[3] || "HOME";

        const process = (teamName) => {
          return files
            .filter(f => f.name.endsWith('.png') && f.name.toUpperCase().includes(teamName.toUpperCase()))
            .map(f => {
              const p = f.name.replace('.png', '').split('_');
              const noIndex = p.findIndex(val => /^\d+$/.test(val));
              const number = noIndex !== -1 ? p[noIndex] : "0";
              const fullName = noIndex !== -1 ? p.slice(noIndex + 1).join(' ') : "PLAYER";

              return {
                no: number,
                name: fullName,
                imagePath: `${githubRawBase}/${dateId}/${gameDir}/${f.name}`,
              };
            }).sort((a, b) => parseInt(a.no) - parseInt(b.no));
        };

        awayData = process(teamAway);
        homeData = process(teamHome);
        
        // --- 修正ポイント：ゲームレポート画像の特定 ---
        if (gameId) {
          reportImagePath = `${reportsRawBase}/${gameId}.png`;
        }
      }
    }
  }
} catch (e) {
  console.error("Fetch Error:", e);
}
---

<Layout title="BDL B-CARDS">
  <div class="app-container bg-[#1a1a1a] min-h-screen text-white overflow-hidden font-avenir">
    <header class="pt-12 pb-6 px-8 border-b border-white/5 text-center">
      <a href="/b-reports" class="inline-block hover:opacity-70 transition-opacity">
        <h1 class="text-2xl font-black uppercase leading-none tracking-[0.25em]">BDL B-Cards</h1>
      </a>
      <p class="text-gray-600 text-[10px] font-bold tracking-[0.4em] mt-3 uppercase">Gameday Collection</p>
    </header>

    <div class="py-10 space-y-16 pb-32">
      <div class="px-8 text-center">
        <div class="flex flex-col gap-1">
          <span class="text-gray-500 text-[12px] font-black uppercase tracking-[0.3em]">Gameday</span>
          <span class="text-white text-[28px] font-bold uppercase leading-none tracking-[0.1em]">{formattedDate}</span>
        </div>
      </div>

      <section class="px-8 flex flex-col items-center">
        {reportImagePath ? (
          <div class="w-full md:w-[60%] mx-auto cursor-pointer card-trigger rounded-xl overflow-hidden border border-white/10 shadow-2xl transition-transform active:scale-95" data-img={reportImagePath}>
            <img 
                src={reportImagePath} 
                alt="Game Report" 
                class="w-full h-auto block" 
                onerror="this.closest('section').style.display='none';"
            />
          </div>
        ) : (
          <div class="text-gray-500 text-[10px] tracking-widest uppercase">Report Loading...</div>
        )}
        <div class="mt-6 text-center">
          <span class="text-[16px] font-black tracking-[0.2em] uppercase text-white">
            {teamAway} <span class="text-blue-500 mx-2">VS</span> {teamHome}
          </span>
        </div>
      </section>

      {[
        { data: awayData, label: teamAway, color: "bg-white text-black" },
        { data: homeData, label: teamHome, color: "bg-blue-600 text-white" }
      ].map((team) => team.data.length > 0 && (
        <section>
          <div class="px-8 mb-6">
            <span class={`${team.color} px-4 py-1.5 text-[14px] font-black uppercase rounded-sm inline-block`}>
              {team.label}
            </span>
          </div>

          <div class="flex overflow-x-auto snap-x snap-mandatory gap-6 px-8 no-scrollbar pb-8">
            {team.data.map((p) => (
              <div class="flex-none w-[80vw] max-w-[320px] snap-center">
                <div class="cursor-pointer card-trigger rounded-2xl overflow-hidden border border-white/10 shadow-xl bg-black/20" data-img={p.imagePath}>
                  <img src={p.imagePath} alt={p.name} class="w-full h-auto" loading="lazy" />
                </div>
                <div class="mt-4 flex flex-col items-center">
                   <div class="w-full py-4 rounded-full bg-white/5 border border-white/10 flex items-center justify-center gap-3">
                     <span class="text-blue-500 font-black italic text-lg">#{p.no}</span>
                     <span class="text-[14px] font-black uppercase tracking-widest">{p.name}</span>
                   </div>
                </div>
              </div>
            ))}
          </div>
        </section>
      ))}
    </div>

    <div id="modal" class="fixed inset-0 bg-black/95 z-50 hidden flex-col items-center justify-center p-6 backdrop-blur-md">
      <div class="absolute top-8 right-8 text-white/40 text-4xl cursor-pointer" id="close">&times;</div>
      <img id="modal-img" src="" class="max-w-full max-h-[80vh] rounded-lg shadow-2xl mb-8" />
      <a id="download-btn" href="" download class="bg-white text-black px-10 py-4 rounded-full font-black uppercase text-[12px] tracking-widest">Download Image</a>
    </div>
  </div>
</Layout>

<script>
  const modal = document.getElementById('modal');
  const modalImg = document.getElementById('modal-img') as HTMLImageElement;
  const close = document.getElementById('close');
  const downloadBtn = document.getElementById('download-btn') as HTMLAnchorElement;

  document.querySelectorAll('.card-trigger').forEach(card => {
    card.addEventListener('click', () => {
      const imgSrc = card.getAttribute('data-img');
      if (imgSrc && modalImg && downloadBtn) {
        modalImg.src = imgSrc;
        downloadBtn.href = imgSrc;
        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });

  close?.addEventListener('click', () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
  });
</script>

<style is:global>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>