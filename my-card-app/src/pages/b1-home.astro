---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

// --- 設定値 ---
const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const RECURSIVE_API = `https://api.github.com/repos/${GITHUB_REPO}/git/trees/main?recursive=1&t=${Date.now()}`;
const IMAGE_BASE_URL = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/reports/B1`;

const cityNameMap = {
  "HOKKAIDO": "HOKKAIDO", "LEVANGA": "HOKKAIDO", "LEVANGAHOKKAIDO": "HOKKAIDO",
  "89ERS": "SENDAI", "SENDAI": "SENDAI", "SENDAI89ERS": "SENDAI",
  "AKITA": "AKITA", "NORTHERNHAPPINETS": "AKITA",
  "ROBOTS": "IBARAKI", "IBARAKI": "IBARAKI",
  "BREX": "UTSUNOMIYA", "UTSUNOMIYA": "UTSUNOMIYA",
  "CRANETHUNDERS": "GUNMA", "GUNMA": "GUNMA",
  "ALPHAS": "KOSHIGAYA", "KOSHIGAYA": "KOSHIGAYA",
  "ALTIRI": "A CHIBA", "ACHIBA": "A CHIBA",
  "JETS": "CHIBA J", "CHIBAJ": "CHIBA J",
  "ALVARK": "A TOKYO", "ATOKYO": "A TOKYO",
  "SUNROCKERS": "SR SHIBUYA", "SHIBUYA": "SR SHIBUYA",
  "BRAVETHUNDERS": "KAWASAKI", "KAWASAKI": "KAWASAKI",
  "BCORSAIRS": "YOKOHAMA BC", "YOKOHAMABC": "YOKOHAMA BC",
  "GROUSES": "TOYAMA", "TOYAMA": "TOYAMA",
  "NEOPHOENIX": "SAN-EN", "SANEN": "SAN-EN",
  "SEAHORSES": "MIKAWA", "MIKAWA": "MIKAWA",
  "FIGHTINGEAGLES": "FE NAGOYA", "FENAGOYA": "FE NAGOYA",
  "DOLPHINS": "NAGOYA D", "DIAMONDDOLPHINS": "NAGOYA D", "NAGOYA": "NAGOYA D",
  "LAKES": "SHIGA", "SHIGA": "SHIGA",
  "HANNARYZ": "KYOTO", "KYOTO": "KYOTO",
  "EVESSA": "OSAKA", "OSAKA": "OSAKA",
  "SUSANOOMAGIC": "SHIMANE", "SHIMANE": "SHIMANE",
  "DRAGONFLIES": "HIROSHIMA", "HIROSHIMA": "HIROSHIMA",
  "BALLOONERS": "SAGA", "SAGA": "SAGA",
  "VELCA": "NAGASAKI", "NAGASAKI": "NAGASAKI",
  "GOLDENKINGS": "RYUKYU", "RYUKYU": "RYUKYU"
};

let reportGroups = [];
try {
  const res = await fetch(RECURSIVE_API, {
    headers: { "Accept": "application/vnd.github.v3+json" }
  });
  const data = await res.json();

  if (data && data.tree) {
    const allFiles = data.tree.filter(item => 
      item.path.includes('output/reports/B1/') && item.path.toLowerCase().endsWith('.png')
    );

    const groups = {};
    allFiles.forEach(file => {
      const pathParts = file.path.split('/');
      const bIndex = pathParts.indexOf('B1');
      if (bIndex === -1 || pathParts.length <= bIndex + 2) return;
      
      const folderName = pathParts[bIndex + 1]; 
      const fileName = pathParts[bIndex + 2];
      if (!/^\d+$/.test(folderName)) return;

      const nameParts = fileName.replace('.png', '').split('_');
      const fullDate = nameParts[0] || ""; 
      const gameId = nameParts[1] || "";   
      const rawAway = nameParts[2] || "AWAY";
      const rawHome = nameParts[3] || "HOME";

      const displayAway = cityNameMap[rawAway.toUpperCase().replace(/[\s\-_]/g, '')] || rawAway;
      const displayHome = cityNameMap[rawHome.toUpperCase().replace(/[\s\-_]/g, '')] || rawHome;

      if (!groups[folderName]) {
        groups[folderName] = {
          id: folderName,
          date: `20${folderName.substring(0,2)}.${folderName.substring(2,4)}.${folderName.substring(4,6)}`,
          reports: []
        };
      }
      
      const cardFolderName = `game_${gameId}_${rawAway}_${rawHome}_${fullDate}`;
      groups[folderName].reports.push({
        path: `${IMAGE_BASE_URL}/${folderName}/${fileName}?t=${Date.now()}`,
        away: displayAway, home: displayHome,
        link: `/b1-cards?folder=${folderName}/${cardFolderName}`
      });
    });
    reportGroups = Object.values(groups).sort((a, b) => b.id.localeCompare(a.id));
  }
} catch (e) {
  console.error("Fetch Error:", e);
}

const teams = [
  { id: 'HOKKAIDO', color: 'bg-[#91ad10]' }, { id: 'SENDAI', color: 'bg-[#f7e000] text-black' }, { id: 'AKITA', color: 'bg-[#dd0055]' },
  { id: 'IBARAKI', color: 'bg-[#002e95]' }, { id: 'UTSUNOMIYA', color: 'bg-[#12284b]' }, { id: 'GUNMA', color: 'bg-[#ffda00] text-black' },
  { id: 'KOSHIGAYA', color: 'bg-[#610d0d]' }, { id: 'A CHIBA', color: 'bg-[#212836]' }, { id: 'CHIBA J', color: 'bg-[#e33216]' },
  { id: 'A TOKYO', color: 'bg-black border border-white/20' }, { id: 'SR SHIBUYA', color: 'bg-[#ffea00] text-black' }, { id: 'KAWASAKI', color: 'bg-[#7a1231]' },
  { id: 'YOKOHAMA BC', color: 'bg-[#000f31]' }, { id: 'TOYAMA', color: 'bg-[#e21f26]' }, { id: 'SAN-EN', color: 'bg-[#d31118]' },
  { id: 'MIKAWA', color: 'bg-[#3356b9]' }, { id: 'FE NAGOYA', color: 'bg-[#003882]' }, { id: 'NAGOYA D', color: 'bg-[#e31d20]' },
  { id: 'SHIGA', color: 'bg-[#1a448e]' }, { id: 'KYOTO', color: 'bg-[#5ea1b4]' }, { id: 'OSAKA', color: 'bg-[#d11c1d]' },
  { id: 'SHIMANE', color: 'bg-[#1c71be]' }, { id: 'HIROSHIMA', color: 'bg-[#f05a22]' }, { id: 'SAGA', color: 'bg-[#4da9df]' },
  { id: 'NAGASAKI', color: 'bg-[#2b3754]' }, { id: 'RYUKYU', color: 'bg-[#b69e63]' }
];

const todayDate = reportGroups.length > 0 ? reportGroups[0].date : "2026.01.25";
const todayGameCount = reportGroups.length > 0 ? reportGroups[0].reports.length : 0;
const teamChunks = [];
for (let i = 0; i < teams.length; i += 9) { teamChunks.push(teams.slice(i, i + 9)); }
---

<Layout title="B1 HOME | B-Data Lab">
  <main class="bg-[#373A36] min-h-screen text-white font-avenir pb-32 overflow-x-hidden relative">
    <header class="sticky top-0 z-50 bg-[#373A36]/90 backdrop-blur-md border-b border-white/10">
      <div class="pt-12 pb-6 px-6 max-w-6xl mx-auto w-full">
        <div class="flex items-end justify-between w-full">
          <a href="/b1-home" class="hover:opacity-80 transition-opacity"><h1 class="text-5xl md:text-7xl font-black uppercase leading-none">B1</h1></a>
          <div class="flex flex-col items-end text-right space-y-3">
            <h2 class="text-xl md:text-3xl font-black tracking-widest uppercase leading-none" style="color: #2E3C57; -webkit-text-stroke: 1px white;">BDATALAB</h2>
          </div>
        </div>
      </div>
    </header>

    <div class="max-w-6xl mx-auto px-6">
      <section class="mt-12">
        <div class="flex justify-between items-end mb-8">
          <div>
            <h2 class="text-4xl font-black uppercase tracking-tighter mb-4">GAME REPORT</h2>
            <div class="flex flex-col gap-1">
              <span class="text-blue-500 text-[10px] font-black uppercase">Latest Update</span>
              <span class="text-white text-[32px] font-bold uppercase">{todayDate}</span>
            </div>
          </div>
          <div class="text-right leading-none">
            <span class="text-7xl font-black italic opacity-20 block">{todayGameCount}</span>
            <span class="text-[12px] font-bold opacity-40 uppercase tracking-[0.3em]">Games</span>
          </div>
        </div>

        <div class="flex overflow-x-auto gap-8 no-scrollbar snap-x pb-4">
          {reportGroups.length > 0 ? reportGroups[0].reports.map(r => (
            <div class="flex-none w-[300px] snap-center">
              <div class="rounded-2xl overflow-hidden shadow-2xl border border-white/10 bg-black/40 aspect-[3/4.2]">
                <img src={r.path} alt="Report" class="w-full h-full object-cover" />
              </div>
              <div class="mt-6 flex justify-center">
                <a href={r.link} class="inline-flex items-center gap-3 px-6 py-2.5 rounded-full bg-black/40 border-2 border-transparent bg-clip-padding relative hover:scale-110 transition-transform group">
                  <div class="absolute inset-0 p-[2px] rounded-full bg-gradient-to-r from-blue-500 via-purple-500 to-red-500 -z-10"></div>
                  <span class="text-[12px] font-black tracking-[0.2em] uppercase text-white">{r.away} vs {r.home}</span>
                </a>
              </div>
            </div>
          )) : <div class="text-gray-500 px-4 italic">No reports found.</div>}
        </div>
      </section>

      <section class="mt-24">
        <h2 class="text-4xl font-black uppercase tracking-tighter mb-8">TEAM</h2>
        <div class="hidden md:grid grid-cols-4 lg:grid-cols-6 gap-2">
          {teams.map(t => (
            <a href={`/b1-team?team=${t.id}`} class="group">
              <div class={`${t.color} aspect-[2/1] rounded-2xl flex items-center justify-center text-[18px] lg:text-[22px] font-black tracking-tighter transition-all hover:scale-105 px-2 text-center uppercase`}>
                <span class="leading-tight">{t.id}</span>
              </div>
            </a>
          ))}
        </div>
      </section>

      <section class="mt-32">
        <h2 class="text-4xl font-black uppercase tracking-tighter mb-8">STANDING</h2>
        <div id="standing-container" class="flex overflow-x-auto gap-6 no-scrollbar pb-4">
          {Array.from({ length: 6 }).map((_, i) => (
            <div class="flex-none w-[220px] aspect-[3/4] bg-black/40 border border-white/5 rounded-2xl flex flex-col items-center justify-center gap-4">
              <div class="text-[40px] font-black text-white/10">#{i + 1}</div>
              <span class="text-[10px] font-black tracking-[0.3em] uppercase text-white/30">Coming Soon</span>
            </div>
          ))}
        </div>
      </section>
    </div>

    <div class="fixed bottom-8 right-8 z-40">
      <a href="/" class="bg-gray-800 text-white px-8 py-4 rounded-full font-black text-[11px] uppercase tracking-widest border border-white/10 shadow-2xl transition-all hover:scale-105">Back to Home</a>
    </div>
  </main>
</Layout>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>