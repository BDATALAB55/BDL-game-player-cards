---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

// 1. URLから ?folder= の値を取得
const { searchParams } = Astro.url;
const queryFolder = searchParams.get('folder');

const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const token = process.env.GITHUB_TOKEN;

// 画像があるベースパス (B1は Bplayers/B1)
const githubBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/Bplayers/B1`;

// --- 手動変換辞書 ---
const cityNameMap = {
  "HOKKAIDO": "HOKKAIDO", "LEVANGA": "HOKKAIDO", "LEVANGAHOKKAIDO": "HOKKAIDO",
  "89ERS": "SENDAI", "SENDAI": "SENDAI", "SENDAI89ERS": "SENDAI",
  "AKITA": "AKITA", "NORTHERNHAPPINETS": "AKITA",
  "ROBOTS": "IBARAKI", "IBARAKI": "IBARAKI",
  "BREX": "UTSUNOMIYA", "UTSUNOMIYA": "UTSUNOMIYA",
  "CRANETHUNDERS": "GUNMA", "GUNMA": "GUNMA",
  "ALPHAS": "KOSHIGAYA", "KOSHIGAYA": "KOSHIGAYA",
  "ALTIRI": "A-CHIBA", "ACHIBA": "A-CHIBA",
  "JETS": "CHIBA-J", "CHIBAJ": "CHIBA-J",
  "ALVARK": "A-TOKYO", "ATOKYO": "A-TOKYO",
  "SUNROCKERS": "SR-SHIBUYA", "SHIBUYA": "SR-SHIBUYA",
  "BRAVETHUNDERS": "KAWASAKI", "KAWASAKI": "KAWASAKI",
  "BCORSAIRS": "YOKOHAMA-BC", "YOKOHAMABC": "YOKOHAMA-BC",
  "GROUSES": "TOYAMA", "TOYAMA": "TOYAMA",
  "NEOPHOENIX": "SAN-EN", "SANEN": "SAN-EN", "SAN-EN": "SAN-EN",
  "SEAHORSES": "MIKAWA", "MIKAWA": "MIKAWA",
  "FIGHTINGEAGLES": "FE-NAGOYA", "FENAGOYA": "FE-NAGOYA",
  "DOLPHINS": "NAGOYA-D", "DIAMONDDOLPHINS": "NAGOYA-D", "NAGOYA": "NAGOYA-D",
  "LAKES": "SHIGA", "SHIGA": "SHIGA",
  "HANNARYZ": "KYOTO", "KYOTO": "KYOTO",
  "EVESSA": "OSAKA", "OSAKA": "OSAKA",
  "SUSANOOMAGIC": "SHIMANE", "SHIMANE": "SHIMANE",
  "DRAGONFLIES": "HIROSHIMA", "HIROSHIMA": "HIROSHIMA",
  "BALLOONERS": "SAGA", "SAGA": "SAGA",
  "VELCA": "NAGASAKI", "NAGASAKI": "NAGASAKI",
  "GOLDENKINGS": "RYUKYU", "RYUKYU": "RYUKYU"
};

// 2. パス解析
// queryFolder は "260103/game_505092_SENDAI_UTSUNOMIYA_20260103" 形式
const segments = queryFolder ? queryFolder.split('/') : [];
const dateId = segments[0] || ""; 
const gameDir = segments[1] || ""; 

// B1特有の親フォルダ名 (例: B1 260103)
const actualDateDir = `B1 ${dateId}`; 
const folderPath = `${actualDateDir}/${gameDir}`;

const apiURL = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/Bplayers/B1/${encodeURIComponent(actualDateDir)}/${encodeURIComponent(gameDir)}`;

let awayData = [];
let homeData = [];
let teamHome = "HOME";
let teamAway = "AWAY";
let reportImagePath = "";

const formattedDate = dateId ? `20${dateId.substring(0,2)}.${dateId.substring(2,4)}.${dateId.substring(4,6)}` : "NO DATA";

try {
  const response = await fetch(`${apiURL}?t=${Date.now()}`, {
    headers: token ? { "Authorization": `token ${token}` } : {}
  });
  const files = await response.json();

  if (Array.isArray(files)) {
    // フォルダ名(game_ID_AWAY_HOME_...)からチーム略称を取得
    const nameParts = gameDir.split('_');
    const rawAway = (nameParts[2] || "").toUpperCase();
    const rawHome = (nameParts[3] || "").toUpperCase();

    // 辞書で正規名に変換
    teamAway = cityNameMap[rawAway] || rawAway;
    teamHome = cityNameMap[rawHome] || rawHome;

    const process = (cityName) => {
      // ハイフンを除去したチーム名でも部分一致するように調整
      const searchKey = cityName.replace('-', '').toUpperCase();
      return files
        .filter(f => f.name.toUpperCase().includes(searchKey) && f.name.endsWith('.png'))
        .map(f => {
          const p = f.name.replace('.png', '').split('_');
          const number = p.find(val => /^\d+$/.test(val)) || "0";
          return {
            team: cityName,
            no: number,
            name: p.slice(p.indexOf(number) + 1).join(' '),
            imagePath: `${githubBase}/${encodeURIComponent(actualDateDir)}/${encodeURIComponent(gameDir)}/${f.name}`,
          };
        }).sort((a, b) => parseInt(a.no) - parseInt(b.no));
    };

    awayData = process(teamAway);
    homeData = process(teamHome);
  }

  // 試合レポート画像 (output/reports/B1/YYMMDD/gameid.png)
  const gameIdMatch = gameDir.match(/\d{6}/);
  if (gameIdMatch) {
    reportImagePath = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/reports/B1/${dateId}/${gameIdMatch[0]}.png`;
  }
} catch (e) {
  console.error("Fetch Error:", e);
}
---

<Layout title="BDL CARDS">
  <div class="app-container bg-[#373A36] min-h-screen text-white overflow-hidden font-avenir">
    
    <header class="pt-12 pb-6 px-8 border-b border-white/5 text-center">
      <a href="/" class="inline-block hover:opacity-70 transition-opacity">
        <h1 class="text-2xl font-black uppercase leading-none tracking-[0.25em]">BDL Cards</h1>
      </a>
      <p class="text-gray-600 text-[10px] font-bold tracking-[0.4em] mt-3 uppercase">Gameday Collection</p>
    </header>

    <div class="py-10 space-y-16 pb-32">
      <div class="px-8">
        <div class="flex flex-col gap-1">
          <span class="text-gray-500 text-[12px] font-black uppercase tracking-[0.3em]">Gameday</span>
          <span class="text-white text-[28px] font-bold uppercase leading-none tracking-[0.1em]">{formattedDate}</span>
        </div>
      </div>

      <section class="px-8 flex flex-col items-center">
        {reportImagePath ? (
          <div class="w-full md:w-[50%] mx-auto cursor-pointer card-trigger rounded-xl overflow-hidden border border-white/20 shadow-2xl" data-img={reportImagePath}>
            <img src={reportImagePath} alt="Game Report" class="w-full h-auto block" onerror="this.style.display='none'" />
          </div>
        ) : (
          <div class="w-full py-10 text-center text-white/20 text-[10px] tracking-widest uppercase border border-dashed border-white/10 rounded-xl">
            Report Image Not Found
          </div>
        )}
        <div class="mt-4 text-center">
          <span class="text-[13px] font-black tracking-[0.2em] uppercase text-white/90">
            {teamAway} <span class="text-[9px] font-medium text-white/40 mx-1 italic">vs</span> {teamHome}
          </span>
        </div>
      </section>

      {[
        { data: awayData, label: teamAway, color: "bg-white text-black" },
        { data: homeData, label: teamHome, color: "bg-blue-600 text-white" }
      ].map((team) => team.data.length > 0 && (
        <section>
          <div class="px-8 mb-6">
            <span class={`${team.color} px-4 py-1.5 text-[16px] font-black uppercase rounded-sm inline-block`}>
              {team.label}
            </span>
          </div>

          <div class="flex overflow-x-auto snap-x snap-mandatory gap-6 px-8 no-scrollbar pb-4">
            {team.data.map((p) => (
              <div class="flex-none w-[78vw] max-w-[340px] snap-center">
                <div class="cursor-pointer card-trigger rounded-2xl overflow-hidden border border-white/10 shadow-xl" data-img={p.imagePath}>
                  <img src={p.imagePath} alt={p.name} class="w-full h-auto block" loading="lazy" />
                </div>
                
                <div class="mt-6 flex flex-col items-center px-1">
                    <button class="w-full inline-flex items-center justify-between px-6 py-4 rounded-full bg-black/40 border-2 border-transparent bg-clip-padding relative active:scale-95 transition-all group overflow-hidden shadow-lg">
                      <div class="absolute inset-0 p-[1.5px] rounded-full bg-gradient-to-r from-blue-500 via-purple-500 to-red-500 -z-10 opacity-80"></div>
                      <div class="flex items-center gap-3">
                        <span class="text-blue-500 font-black italic text-lg">#{p.no}</span>
                        <span class="text-[14px] font-black tracking-[0.15em] uppercase text-white">{p.name}</span>
                      </div>
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="text-white/40 group-hover:text-white transition-colors" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                      </svg>
                    </button>
                </div>
              </div>
            ))}
          </div>
        </section>
      ))}
    </div>

    <div id="modal" class="fixed inset-0 bg-black/98 z-50 hidden flex-col items-center justify-center p-6 backdrop-blur-md">
      <div class="absolute top-8 right-8 text-white/40 text-4xl font-light cursor-pointer p-4" id="close">&times;</div>
      <img id="modal-img" src="" class="max-w-full max-h-[85vh] shadow-2xl rounded-xl mb-12" />
      <a id="download-btn" href="" download class="bg-white text-black px-14 py-4 rounded-full font-black uppercase tracking-widest text-[11px]">Download Card</a>
    </div>

    <div class="fixed bottom-8 left-0 right-0 flex justify-center z-40 pointer-events-none">
      <a href="/b-reports" class="pointer-events-auto bg-blue-600 text-white px-8 py-4 rounded-full font-black text-[11px] uppercase tracking-widest shadow-2xl active:scale-95 transition-transform">
        Game Report Archive
      </a>
    </div>
  </div>
</Layout>

<script>
  const modal = document.getElementById('modal');
  const modalImg = document.getElementById('modal-img') as HTMLImageElement;
  const close = document.getElementById('close');
  const downloadBtn = document.getElementById('download-btn') as HTMLAnchorElement;

  document.querySelectorAll('.card-trigger').forEach(card => {
    card.addEventListener('click', () => {
      const imgSrc = card.getAttribute('data-img');
      if (imgSrc && modalImg && downloadBtn) {
        modalImg.src = imgSrc;
        downloadBtn.href = imgSrc;
        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });

  close?.addEventListener('click', () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
  });
</script>

<style is:global>
  :root { font-family: "Avenir Next", sans-serif; }
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>