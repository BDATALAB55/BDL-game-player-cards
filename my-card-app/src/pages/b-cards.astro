---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

// 1. URLパラメータからフォルダ情報を取得
const { searchParams } = Astro.url;
const queryFolder = searchParams.get('folder'); 

const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const token = process.env.GITHUB_TOKEN;

// パス解析 (例: "260103/game_505092_...")
const segments = queryFolder ? queryFolder.split('/') : [];
const dateId = segments[0] || "";  
const gameDir = segments[1] || ""; 

const githubRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main`;

// 選手カード用API URL (B1直下のYYMMDDフォルダを参照)
const apiURL = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/Bplayers/B1/${dateId}/${gameDir}`;

let awayData = [];
let homeData = [];
let teamHome = "HOME";
let teamAway = "AWAY";
let reportImagePath = "";

// 日付の整形表示 (260103 -> 2026.01.03)
const formattedDate = dateId ? `20${dateId.substring(0,2)}.${dateId.substring(2,4)}.${dateId.substring(4,6)}` : "";

try {
  const response = await fetch(`${apiURL}?t=${Date.now()}`, {
    headers: token ? { "Authorization": `token ${token}` } : {}
  });
  const files = await response.json();

  if (Array.isArray(files)) {
    // フォルダ名からチーム名を抽出 (game_ID_AWAY_HOME_DATE)
    const nameParts = gameDir.split('_');
    teamAway = nameParts[2] || "AWAY";
    teamHome = nameParts[3] || "HOME";

    const process = (teamName) => {
      return files
        .filter(f => f.name.includes(teamName) && f.name.endsWith('.png'))
        .map(f => {
          const p = f.name.replace('.png', '').split('_');
          // 背番号を抽出 (ファイル名内の数字)
          const number = p.find(val => /^\d+$/.test(val)) || "0";
          return {
            no: number,
            name: p[3] || p[2] || "PLAYER", // ファイル構造から名前を取得
            imagePath: `${githubRawBase}/output/Bplayers/B1/${dateId}/${gameDir}/${f.name}`,
          };
        }).sort((a, b) => parseInt(a.no) - parseInt(b.no));
    };

    awayData = process(teamAway);
    homeData = process(teamHome);
  }

  // 2. ゲームレポート画像のパス (output/reports/B1/YYMMDD/GAMEID.png)
  const gameId = gameDir.split('_')[1];
  if (gameId) {
    reportImagePath = `${githubRawBase}/output/reports/B1/${dateId}/${gameId}.png`;
  }

} catch (e) {
  console.error("Fetch Error:", e);
}
---

<Layout title="BDL B-CARDS">
  <div class="app-container bg-[#1a1a1a] min-h-screen text-white font-sans">
    
    <header class="pt-12 pb-6 px-8 text-center">
      <h1 class="text-2xl font-black uppercase tracking-[0.2em]">BDL B-CARDS</h1>
      <p class="text-gray-500 text-[10px] font-bold tracking-[0.4em] mt-2 uppercase">Gameday Collection</p>
    </header>

    <div class="py-6 space-y-12 pb-32">
      <div class="px-8">
        <div class="flex flex-col border-l-2 border-blue-600 pl-4">
          <span class="text-gray-500 text-[10px] font-black uppercase tracking-widest">Gameday</span>
          <span class="text-white text-2xl font-bold italic">{formattedDate}</span>
        </div>
      </div>

      <section class="px-6">
        {reportImagePath && (
          <div class="w-full max-w-2xl mx-auto rounded-xl overflow-hidden shadow-2xl border border-white/10 card-trigger cursor-pointer" data-img={reportImagePath}>
            <img src={reportImagePath} class="w-full h-auto" alt="Game Report" onerror="this.style.display='none'" />
          </div>
        )}
        <div class="mt-4 text-center">
            <span class="text-sm font-black tracking-widest uppercase">
              {teamAway} <span class="text-blue-500 mx-2">vs</span> {teamHome}
            </span>
        </div>
      </section>

      {[
        { data: awayData, label: teamAway, color: "bg-white text-black" },
        { data: homeData, label: teamHome, color: "bg-blue-600 text-white" }
      ].map((team) => team.data.length > 0 && (
        <section>
          <div class="px-8 mb-4">
            <span class={`${team.color} px-3 py-1 text-[12px] font-black uppercase rounded-sm`}>
              {team.label}
            </span>
          </div>

          <div class="flex overflow-x-auto gap-5 px-8 no-scrollbar pb-4 snap-x">
            {team.data.map((p) => (
              <div class="flex-none w-[280px] snap-center">
                <div class="rounded-xl overflow-hidden border border-white/10 shadow-lg card-trigger cursor-pointer bg-black" data-img={p.imagePath}>
                  <img src={p.imagePath} alt={p.name} class="w-full h-auto" loading="lazy" />
                </div>
                <div class="mt-4 px-2">
                    <div class="w-full flex items-center justify-between px-5 py-3 rounded-full bg-gradient-to-r from-gray-900 to-black border border-white/10 shadow-lg">
                        <div class="flex items-center gap-3">
                            <span class="text-blue-500 font-black italic">#{p.no}</span>
                            <span class="text-[12px] font-bold tracking-wider uppercase text-white/90">{p.name}</span>
                        </div>
                        <div class="w-2 h-2 rounded-full bg-blue-500 animate-pulse"></div>
                    </div>
                </div>
              </div>
            ))}
          </div>
        </section>
      ))}
    </div>

    <div id="modal" class="fixed inset-0 bg-black/fb z-50 hidden flex-col items-center justify-center p-6 backdrop-blur-xl">
        <div class="absolute top-6 right-6 text-white/50 text-3xl p-4" id="close">&times;</div>
        <img id="modal-img" src="" class="max-w-full max-h-[70vh] rounded-lg shadow-2xl" />
        <a id="download-btn" href="" download class="mt-10 bg-blue-600 text-white px-10 py-4 rounded-full font-black text-xs uppercase tracking-[0.2em]">Save Image</a>
    </div>
  </div>
</Layout>

<script>
  const modal = document.getElementById('modal');
  const modalImg = document.getElementById('modal-img') as HTMLImageElement;
  const close = document.getElementById('close');
  const downloadBtn = document.getElementById('download-btn') as HTMLAnchorElement;

  document.querySelectorAll('.card-trigger').forEach(card => {
    card.addEventListener('click', () => {
      const src = card.getAttribute('data-img');
      if (src && modalImg && downloadBtn) {
        modalImg.src = src;
        downloadBtn.href = src;
        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });

  close?.addEventListener('click', () => {
    modal?.classList.add('hidden');
  });
</script>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>