---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

const { searchParams } = Astro.url;
const queryFolder = searchParams.get('folder') || ""; 

const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const token = process.env.GITHUB_TOKEN;

// 1. URLの解析（どんな形式でも対応できるよう柔軟に）
const segments = queryFolder.split('/').filter(Boolean);
let dateId = "";
let urlGameDir = "";

if (segments.length >= 2) {
  // 基本パターン: folder=251227/game_505068...
  dateId = segments[0];
  urlGameDir = segments[1];
} else {
  // チームページなど: folder=game_505068... のみのパターン
  urlGameDir = segments[0] || "";
  // フォルダ名の末尾から日付(8桁)を探す
  const dateMatch = urlGameDir.match(/\d{8}$/);
  dateId = dateMatch ? dateMatch[0].substring(2) : "NO_DATE";
}

const githubRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/Bplayers/B1/${dateId}/${urlGameDir}`;
const reportRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/reports/B1/${dateId}`;
const apiGameURL = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/Bplayers/B1/${dateId}/${urlGameDir}`;

// 2. マスター表に基づく命名規則の完全定義
const TEAM_MASTER = {
  "HOKKAIDO": { prefix: "LEVANGA_HOKKAIDO", display: "HOKKAIDO", report: "LEVANGA" },
  "SENDAI": { prefix: "SENDAI_89ERS", display: "SENDAI", report: "89ERS" },
  "AKITA": { prefix: "AKITA_NORTHERN_HAPPINETS", display: "AKITA", report: "NORTHERNHAPPINETS" },
  "IBARAKI": { prefix: "IBARAKI_ROBOTS", display: "IBARAKI", report: "ROBOTS" },
  "UTSUNOMIYA": { prefix: "UTSUNOMIYA_BREX", display: "UTSUNOMIYA", report: "BREX" },
  "GUNMA": { prefix: "GUNMA_CRANE_THUNDERS", display: "GUNMA", report: "CRANETHUNDERS" },
  "KOSHIGAYA": { prefix: "KOSHIGAYA_ALPHAS", display: "KOSHIGAYA", report: "ALPHAS" },
  "ACHIBA": { prefix: "ALTIRI_CHIBA", display: "A-CHIBA", report: "ALTIRI" },
  "CHIBAJ": { prefix: "CHIBA_JETS", display: "CHIBA-J", report: "JETS" },
  "ATOKYO": { prefix: "ALVARK_TOKYO", display: "A-TOKYO", report: "ALVARK" },
  "SHIBUYA": { prefix: "SUNROCKERS_SHIBUYA", display: "SR-SHIBUYA", report: "SUNROCKERS" },
  "KAWASAKI": { prefix: "KAWASAKI_BRAVE_THUNDERS", display: "KAWASAKI", report: "BRAVETHUNDERS" },
  "YOKOHAMABC": { prefix: "YOKOHAMA_B-CORSAIRS", display: "YOKOHAMA-BC", report: "B-CORSAIRS" },
  "TOYAMA": { prefix: "TOYAMA_GROUSES", display: "TOYAMA", report: "GROUSES" },
  "SANEN": { prefix: "SAN-EN_NEOPHOENIX", display: "SAN-EN", report: "NEOPHOENIX" },
  "MIKAWA": { prefix: "SEAHORSES_MIKAWA", display: "MIKAWA", report: "SEAHORSES" },
  "FENAGOYA": { prefix: "FIGHTING_EAGLES_NAGOYA", display: "FE-NAGOYA", report: "FIGHTINGEAGLES" },
  "NAGOYAD": { prefix: "NAGOYA_DIAMOND_DOLPHINS", display: "NAGOYA-D", report: "DIAMONDDOLPHINS" },
  "SHIGA": { prefix: "SHIGA_LAKES", display: "SHIGA", report: "LAKES" },
  "KYOTO": { prefix: "KYOTO_HANNARYZ", display: "KYOTO", report: "HANNARYZ" },
  "OSAKA": { prefix: "OSAKA_EVESSA", display: "OSAKA", report: "EVESSA" },
  "SHIMANE": { prefix: "SHIMANE_SUSANOO_MAGIC", display: "SHIMANE", report: "SUSANOOMAGIC" },
  "HIROSHIMA": { prefix: "HIROSHIMA_DRAGONFLIES", display: "HIROSHIMA", report: "DRAGONFLIES" },
  "SAGA": { prefix: "SAGA_BALLOONERS", display: "SAGA", report: "BALLOONERS" },
  "NAGASAKI": { prefix: "NAGASAKI_VELCA", display: "NAGASAKI", report: "VELCA" },
  "RYUKYU": { prefix: "RYUKYU_GOLDEN_KINGS", display: "RYUKYU", report: "GOLDENKINGS" }
};

let awayData = [];
let homeData = [];
let displayTeamAway = "AWAY";
let displayTeamHome = "HOME";
let reportImagePath = "";

const formattedDate = dateId.length === 6 ? `20${dateId.substring(0,2)}.${dateId.substring(2,4)}.${dateId.substring(4,6)}` : "GAME DAY";

try {
  // 3. フォルダ名から情報を抽出 (game_505068_AKITA_FENAGOYA_20251227)
  const nameParts = urlGameDir.split('_');
  const gameId = nameParts[1] || "";
  const awayKey = nameParts[2] || ""; // 例: AKITA
  const homeKey = nameParts[3] || ""; // 例: FENAGOYA
  
  // 日付の特定（フォルダ名末尾 or 親フォルダ名）
  const reportDate = (nameParts[4] && nameParts[4].length === 8) ? nameParts[4] : `20${dateId}`;

  const awayConf = TEAM_MASTER[awayKey] || { prefix: awayKey, display: awayKey, report: awayKey };
  const homeConf = TEAM_MASTER[homeKey] || { prefix: homeKey, display: homeKey, report: homeKey };

  displayTeamAway = awayConf.display;
  displayTeamHome = homeConf.display;

  // 4. ゲームレポートURLの生成
  reportImagePath = `${reportRawBase}/${reportDate}_${gameId}_${awayConf.report}_${homeConf.report}.png`;

  // 5. 選手カードの取得と振り分け
  const res = await fetch(`${apiGameURL}?t=${Date.now()}`, {
    headers: token ? { "Authorization": `token ${token}` } : {}
  });
  const files = await res.json();

  if (Array.isArray(files)) {
    files.forEach(f => {
      if (!f.name.toLowerCase().endsWith('.png')) return;

      const playerObj = {
        name: f.name.replace('.png', '').split('_').slice(-2).join(' '),
        imagePath: `${githubRawBase}/${f.name}`
      };

      // 「選手スタッツ(カード)」列のprefixで判定
      const fileNameUpper = f.name.toUpperCase();
      if (fileNameUpper.startsWith(awayConf.prefix.toUpperCase())) {
        awayData.push(playerObj);
      } else if (fileNameUpper.startsWith(homeConf.prefix.toUpperCase())) {
        homeData.push(playerObj);
      }
    });
  }
} catch (e) {
  console.error("Critical Error:", e);
}
---

<Layout title="B1 CARDS | B-Data Lab">
  <div class="app-container bg-[#373A36] min-h-screen text-white font-avenir">
    <header class="pt-12 pb-6 px-8 border-b border-white/5 text-center relative">
      <button onclick="history.back()" class="absolute left-8 top-12 text-white/40 hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/></svg>
      </button>
      <h1 class="text-2xl font-black uppercase tracking-[0.25em]">B1 CARDS</h1>
    </header>

    <div class="py-10 space-y-16 pb-32">
      <div class="px-8">
        <span class="text-gray-500 text-[12px] font-black uppercase tracking-[0.3em]">Gameday</span>
        <h2 class="text-white text-[28px] font-bold uppercase tracking-[0.1em]">{formattedDate}</h2>
      </div>

      <section class="px-8 flex flex-col items-center">
        <div class="w-full md:max-w-[500px] mx-auto cursor-pointer card-trigger rounded-xl overflow-hidden border border-white/10 shadow-2xl bg-black/40 min-h-[200px] flex items-center justify-center" data-img={reportImagePath}>
          <img src={reportImagePath} class="w-full h-auto block" alt="Game Report" onerror="this.src='https://placehold.jp/24/333333/ffffff/400x500.png?text=REPORT%20LOADING...'" />
        </div>
        <div class="mt-6 text-center">
          <span class="text-[16px] font-black tracking-[0.2em] uppercase">
            {displayTeamAway} <span class="text-blue-500 mx-2 text-[12px]">vs</span> {displayTeamHome}
          </span>
        </div>
      </section>

      {[
        { data: awayData, label: displayTeamAway, color: "bg-white text-black" },
        { data: homeData, label: displayTeamHome, color: "bg-blue-600 text-white" }
      ].map((team) => (
        <section>
          <div class="px-8 mb-6">
            <span class={`${team.color} px-4 py-1.5 text-[15px] font-black uppercase rounded-sm`}>{team.label}</span>
          </div>

          <div class="flex overflow-x-auto snap-x gap-6 px-8 no-scrollbar pb-8">
            {team.data.length > 0 ? team.data.map((p) => (
              <div class="flex-none w-[80vw] max-w-[320px] snap-center">
                <div class="cursor-pointer card-trigger rounded-2xl overflow-hidden border border-white/10 bg-black/20" data-img={p.imagePath}>
                  <img src={p.imagePath} alt={p.name} class="w-full h-auto" loading="lazy" />
                </div>
              </div>
            )) : (
              <div class="px-8 w-full py-12 border border-dashed border-white/10 rounded-2xl text-center text-white/20 uppercase text-[10px] tracking-[0.4em]">No Player Cards</div>
            )}
          </div>
        </section>
      ))}
    </div>
  </div>
</Layout>