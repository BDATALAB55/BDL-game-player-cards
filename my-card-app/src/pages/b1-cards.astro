---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

const { searchParams } = Astro.url;
const queryFolder = searchParams.get('folder') || ""; 

const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const token = process.env.GITHUB_TOKEN;

// 1. パスの徹底解析
const cleanPath = queryFolder.replace(/^\//, '').replace(/\/$/, '');
const segments = cleanPath.split('/');
const urlGameDir = segments.find(s => s.startsWith('game_')) || "";
const dateId = segments[0] !== urlGameDir ? segments[0] : (urlGameDir.split('_').pop()?.slice(-6) || "");

// チーム名マスタ（逆引き対応版）
const TEAM_MASTER = {
  "HOKKAIDO": { card: "LEVANGA_HOKKAIDO", display: "HOKKAIDO", report: "LEVANGA", alt: ["LEVANGA"] },
  "SENDAI": { card: "SENDAI_89ERS", display: "SENDAI", report: "89ERS", alt: ["89ERS"] },
  "AKITA": { card: "AKITA_NORTHERN_HAPPINETS", display: "AKITA", report: "NORTHERNHAPPINETS", alt: ["NORTHERNHAPPINETS", "NORTHERN_HAPPINETS"] },
  "IBARAKI": { card: "IBARAKI_ROBOTS", display: "IBARAKI", report: "ROBOTS", alt: [] },
  "UTSUNOMIYA": { card: "UTSUNOMIYA_BREX", display: "UTSUNOMIYA", report: "BREX", alt: [] },
  "GUNMA": { card: "GUNMA_CRANE_THUNDERS", display: "GUNMA", report: "CRANETHUNDERS", alt: [] },
  "KOSHIGAYA": { card: "KOSHIGAYA_ALPHAS", display: "KOSHIGAYA", report: "ALPHAS", alt: [] },
  "ACHIBA": { card: "ALTIRI_CHIBA", display: "A-CHIBA", report: "ALTIRI", alt: [] },
  "CHIBAJ": { card: "CHIBA_JETS", display: "CHIBA-J", report: "JETS", alt: [] },
  "ATOKYO": { card: "ALVARK_TOKYO", display: "A-TOKYO", report: "ALVARK", alt: [] },
  "SHIBUYA": { card: "SUNROCKERS_SHIBUYA", display: "SR-SHIBUYA", report: "SUNROCKERS", alt: [] },
  "KAWASAKI": { card: "KAWASAKI_BRAVE_THUNDERS", display: "KAWASAKI", report: "BRAVETHUNDERS", alt: [] },
  "YOKOHAMABC": { card: "YOKOHAMA_B-CORSAIRS", display: "YOKOHAMA-BC", report: "B-CORSAIRS", alt: ["B-CORSAIRS"] },
  "TOYAMA": { card: "TOYAMA_GROUSES", display: "TOYAMA", report: "GROUSES", alt: [] },
  "SANEN": { card: "SAN-EN_NEOPHOENIX", display: "SAN-EN", report: "NEOPHOENIX", alt: [] },
  "MIKAWA": { card: "SEAHORSES_MIKAWA", display: "MIKAWA", report: "SEAHORSES", alt: [] },
  "FENAGOYA": { card: "FIGHTING_EAGLES_NAGOYA", display: "FE-NAGOYA", report: "FIGHTINGEAGLES", alt: [] },
  "NAGOYAD": { card: "NAGOYA_DIAMOND_DOLPHINS", display: "NAGOYA-D", report: "DIAMONDDOLPHINS", alt: [] },
  "SHIGA": { card: "SHIGA_LAKES", display: "SHIGA", report: "LAKES", alt: [] },
  "KYOTO": { card: "KYOTO_HANNARYZ", display: "KYOTO", report: "HANNARYZ", alt: [] },
  "OSAKA": { card: "OSAKA_EVESSA", display: "OSAKA", report: "EVESSA", alt: [] },
  "SHIMANE": { card: "SHIMANE_SUSANOO_MAGIC", display: "SHIMANE", report: "SUSANOOMAGIC", alt: ["SUSANOOMAGIC"] },
  "HIROSHIMA": { card: "HIROSHIMA_DRAGONFLIES", display: "HIROSHIMA", report: "DRAGONFLIES", alt: [] },
  "SAGA": { card: "SAGA_BALLOONERS", display: "SAGA", report: "BALLOONERS", alt: [] },
  "NAGASAKI": { card: "NAGASAKI_VELCA", display: "NAGASAKI", report: "VELCA", alt: [] },
  "RYUKYU": { card: "RYUKYU_GOLDEN_KINGS", display: "RYUKYU", report: "GOLDENKINGS", alt: [] }
};

// URLの文字列（SUSANOOMAGIC等）からマスタのキー（SHIMANE等）を見つける関数
const findConfig = (key) => {
  const upperKey = key.toUpperCase();
  // 1. 直接一致
  if (TEAM_MASTER[upperKey]) return TEAM_MASTER[upperKey];
  // 2. card名に含まれるか、またはaltに含まれるか
  for (const teamKey in TEAM_MASTER) {
    const conf = TEAM_MASTER[teamKey];
    if (conf.card.includes(upperKey) || conf.report.includes(upperKey) || conf.alt.includes(upperKey)) {
      return conf;
    }
  }
  return { card: key, display: key, report: key };
};

let awayData = [];
let homeData = [];
let displayTeamAway = "AWAY";
let displayTeamHome = "HOME";
let reportImagePath = "";

if (urlGameDir) {
  try {
    const githubRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/Bplayers/B1/${dateId}/${urlGameDir}`;
    const reportRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/reports/B1/${dateId}`;
    const apiGameURL = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/Bplayers/B1/${dateId}/${urlGameDir}`;

    const res = await fetch(`${apiGameURL}?t=${Date.now()}`, {
      headers: token ? { "Authorization": `token ${token}` } : {}
    });
    const files = await res.json();

    const dirParts = urlGameDir.split('_'); // game, 505143, SUSANOOMAGIC, 89ERS, 20260125
    const awayConf = findConfig(dirParts[2]);
    const homeConf = findConfig(dirParts[3]);

    displayTeamAway = awayConf.display;
    displayTeamHome = homeConf.display;

    const gameId = dirParts[1];
    const fullDate = dirParts[4];
    reportImagePath = `${reportRawBase}/${fullDate}_${gameId}_${awayConf.report}_${homeConf.report}.png`;

    if (Array.isArray(files)) {
      files.forEach(f => {
        if (!f.name.toLowerCase().endsWith('.png')) return;
        const fileName = f.name.toUpperCase();
        const playerObj = {
          name: f.name.replace('.png', '').split('_').slice(-2).join(' '),
          imagePath: `${githubRawBase}/${f.name}`
        };

        // 選手カードのファイル名にマスタのcard文字列が含まれているか
        if (fileName.includes(awayConf.card.toUpperCase())) {
          awayData.push(playerObj);
        } else if (fileName.includes(homeConf.card.toUpperCase())) {
          homeData.push(playerObj);
        }
      });
    }
  } catch (e) {
    console.error("Fetch Error:", e);
  }
}
---

<Layout title="B1 CARDS | B-Data Lab">
  <div class="app-container bg-[#373A36] min-h-screen text-white font-avenir">
    <header class="pt-12 pb-6 px-8 border-b border-white/5 text-center relative">
      <button onclick="history.back()" class="absolute left-8 top-12 text-white/40 hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
          <path d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
        </svg>
      </button>
      <h1 class="text-2xl font-black uppercase tracking-[0.25em]">B1 CARDS</h1>
    </header>

    <div class="py-10 space-y-16 pb-32">
      <section class="px-8 flex flex-col items-center">
        <div class="w-full md:max-w-[500px] mx-auto cursor-pointer card-trigger rounded-xl overflow-hidden border border-white/10 shadow-2xl bg-black/40 min-h-[200px] flex items-center justify-center" data-img={reportImagePath}>
          <img 
            src={reportImagePath} 
            class="w-full h-auto block" 
            onerror="this.src='https://placehold.jp/24/333333/ffffff/400x500.png?text=REPORT%20NOT%20FOUND'"
          />
        </div>
        <div class="mt-6 text-center">
          <span class="text-[16px] font-black tracking-[0.2em] uppercase">
            {displayTeamAway} <span class="text-blue-500 mx-2 text-[12px]">vs</span> {displayTeamHome}
          </span>
        </div>
      </section>

      {[
        { data: awayData, label: displayTeamAway, color: "bg-white text-black" },
        { data: homeData, label: displayTeamHome, color: "bg-blue-600 text-white" }
      ].map((team) => (
        <section>
          <div class="px-8 mb-6">
            <span class={`${team.color} px-4 py-1.5 text-[15px] font-black uppercase rounded-sm`}>
              {team.label}
            </span>
          </div>
          
          <div class="flex overflow-x-auto gap-6 px-8 no-scrollbar pb-8">
            {team.data.length > 0 ? (
              team.data.map((p) => (
                <div class="flex-none w-[80vw] max-w-[320px] snap-center">
                  <div class="cursor-pointer card-trigger rounded-2xl overflow-hidden border border-white/10 bg-black/20" data-img={p.imagePath}>
                    <img src={p.imagePath} class="w-full h-auto" loading="lazy" />
                  </div>
                </div>
              ))
            ) : (
              <div class="px-8 w-full py-12 border border-dashed border-white/10 rounded-2xl text-center text-white/20 uppercase text-[10px] tracking-[0.4em]">
                No Cards Found
              </div>
            )}
          </div>
        </section>
      ))}
    </div>

    <div id="modal" class="fixed inset-0 bg-black/98 z-50 hidden flex-col items-center justify-center p-6 backdrop-blur-md">
      <div class="absolute top-8 right-8 text-white/40 text-4xl cursor-pointer p-4" id="close">&times;</div>
      <img id="modal-img" src="" class="max-w-full max-h-[85vh] shadow-2xl rounded-xl mb-12" />
      <a id="download-btn" href="" download class="bg-white text-black px-14 py-4 rounded-full font-black uppercase tracking-widest text-[11px]">
        Download Card
      </a>
    </div>
  </div>
</Layout>

<script>
  const modal = document.getElementById('modal');
  const modalImg = document.getElementById('modal-img') as HTMLImageElement;
  const close = document.getElementById('close');
  const downloadBtn = document.getElementById('download-btn') as HTMLAnchorElement;

  document.querySelectorAll('.card-trigger').forEach(card => {
    card.addEventListener('click', () => {
      const imgSrc = card.getAttribute('data-img');
      if (imgSrc && modalImg && downloadBtn) {
        modalImg.src = imgSrc;
        downloadBtn.href = imgSrc;
        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });

  close?.addEventListener('click', () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
  });
</script>

<style is:global>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>