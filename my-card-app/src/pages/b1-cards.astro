---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

const { searchParams } = Astro.url;
const queryFolder = searchParams.get('folder') || "";

const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const token = process.env.GITHUB_TOKEN;

// フォルダパスの解析
const segments = queryFolder.split('/');
const dateId = segments[0] || "";  
const urlGameDir = segments[segments.length - 1] || ""; 

const githubRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/Bplayers/B1`;
const reportRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/reports/B1/${dateId}`;
const apiParentURL = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/Bplayers/B1/${dateId}`;

// --- 参考ページと合わせた手動変換辞書 ---
const cityNameMap = {
  "HOKKAIDO": "HOKKAIDO", "LEVANGA": "HOKKAIDO", "LEVANGAHOKKAIDO": "HOKKAIDO",
  "89ERS": "SENDAI", "SENDAI": "SENDAI", "SENDAI89ERS": "SENDAI",
  "AKITA": "AKITA", "NORTHERNHAPPINETS": "AKITA",
  "ROBOTS": "IBARAKI", "IBARAKI": "IBARAKI",
  "BREX": "UTSUNOMIYA", "UTSUNOMIYA": "UTSUNOMIYA",
  "CRANETHUNDERS": "GUNMA", "GUNMA": "GUNMA",
  "ALPHAS": "KOSHIGAYA", "KOSHIGAYA": "KOSHIGAYA",
  "ALTIRI": "A-CHIBA", "ACHIBA": "A-CHIBA",
  "JETS": "CHIBA-J", "CHIBAJ": "CHIBA-J",
  "ALVARK": "A-TOKYO", "ATOKYO": "A-TOKYO",
  "SUNROCKERS": "SR-SHIBUYA", "SHIBUYA": "SR-SHIBUYA",
  "BRAVETHUNDERS": "KAWASAKI", "KAWASAKI": "KAWASAKI",
  "BCORSAIRS": "YOKOHAMA-BC", "YOKOHAMABC": "YOKOHAMA-BC", "B-CORSAIRS": "YOKOHAMA-BC",
  "GROUSES": "TOYAMA", "TOYAMA": "TOYAMA",
  "NEOPHOENIX": "SAN-EN", "SANEN": "SAN-EN", "SAN-EN": "SAN-EN",
  "SEAHORSES": "MIKAWA", "MIKAWA": "MIKAWA",
  "FIGHTINGEAGLES": "FE-NAGOYA", "FENAGOYA": "FE-NAGOYA",
  "DOLPHINS": "NAGOYA-D", "DIAMONDDOLPHINS": "NAGOYA-D", "NAGOYA": "NAGOYA-D", "NAGOYAD": "NAGOYA-D",
  "LAKES": "SHIGA", "SHIGA": "SHIGA",
  "HANNARYZ": "KYOTO", "KYOTO": "KYOTO",
  "EVESSA": "OSAKA", "OSAKA": "OSAKA",
  "SUSANOOMAGIC": "SHIMANE", "SHIMANE": "SHIMANE",
  "DRAGONFLIES": "HIROSHIMA", "HIROSHIMA": "HIROSHIMA",
  "BALLOONERS": "SAGA", "SAGA": "SAGA",
  "VELCA": "NAGASAKI", "NAGASAKI": "NAGASAKI",
  "GOLDENKINGS": "RYUKYU", "RYUKYU": "RYUKYU"
};

let awayData = [];
let homeData = [];
let displayTeamHome = "HOME";
let displayTeamAway = "AWAY";
let reportImagePath = "";
let gameDir = "";

const formattedDate = dateId ? `20${dateId.substring(0,2)}.${dateId.substring(2,4)}.${dateId.substring(4,6)}` : "NO DATA";

try {
  const parentRes = await fetch(`${apiParentURL}?t=${Date.now()}`, {
    headers: token ? { "Authorization": `token ${token}` } : {}
  });
  const folders = await parentRes.json();
  
  if (Array.isArray(folders)) {
    const gameId = urlGameDir.match(/\d{6}/)?.[0];
    const targetFolder = folders.find(f => f.name.includes(urlGameDir) || (gameId && f.name.includes(gameId)));
    
    if (targetFolder) {
      gameDir = targetFolder.name;
      const filesRes = await fetch(`${targetFolder.url}`, {
        headers: token ? { "Authorization": `token ${token}` } : {}
      });
      const files = await filesRes.json();

      if (Array.isArray(files)) {
        // game_505138_HANNARYZ_B-CORSAIRS_260124 などの構造を分解
        const nameParts = gameDir.split('_');
        const teamAwayRaw = nameParts[2] || "AWAY"; 
        const teamHomeRaw = nameParts[3] || "HOME";

        // 選手カード検索用の関数
        const getPlayerData = (rawName) => {
          const searchKey = rawName.toUpperCase().replace(/[^A-Z0-9]/g, '');
          return files
            .filter(f => {
              const fUpper = f.name.toUpperCase().replace(/[^A-Z0-9]/g, '');
              return f.name.endsWith('.png') && fUpper.includes(searchKey);
            })
            .map(f => ({
              name: f.name.replace('.png', '').split('_').slice(-2).join(' '),
              imagePath: `${githubRawBase}/${dateId}/${gameDir}/${f.name}`
            }));
        };

        awayData = getPlayerData(teamAwayRaw);
        homeData = getPlayerData(teamHomeRaw);

        // 表示用ラベルの変換
        displayTeamAway = cityNameMap[teamAwayRaw.toUpperCase().replace(/[^A-Z0-9]/g, '')] || teamAwayRaw;
        displayTeamHome = cityNameMap[teamHomeRaw.toUpperCase().replace(/[^A-Z0-9]/g, '')] || teamHomeRaw;
        
        // レポート画像：成功しているページと同じ命名規則で生成
        const fullDate = `20${dateId}`;
        reportImagePath = `${reportRawBase}/${fullDate}_${gameId}_${teamAwayRaw}_${teamHomeRaw}.png`;
      }
    }
  }
} catch (e) {
  console.error("Fetch Error:", e);
}
---
<Layout title="B1 CARDS | B-Data Lab">
  <div class="app-container bg-[#373A36] min-h-screen text-white font-avenir">
    <header class="pt-12 pb-6 px-8 border-b border-white/5 text-center relative">
      <button onclick="history.back()" class="absolute left-8 top-12 text-white/40 hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/></svg>
      </button>
      <h1 class="text-2xl font-black uppercase tracking-[0.25em]">B1 CARDS</h1>
      <p class="text-gray-600 text-[10px] font-bold tracking-[0.4em] mt-3 uppercase">Gameday Collection</p>
    </header>

    <div class="py-10 space-y-16 pb-32">
      <div class="px-8">
        <span class="text-gray-500 text-[12px] font-black uppercase tracking-[0.3em]">Gameday</span>
        <h2 class="text-white text-[28px] font-bold uppercase tracking-[0.1em]">{formattedDate}</h2>
      </div>

      <section class="px-8 flex flex-col items-center">
        <div class="w-full md:max-w-[500px] mx-auto cursor-pointer card-trigger rounded-xl overflow-hidden border border-white/10 shadow-2xl bg-black/40 min-h-[200px] flex items-center justify-center" data-img={reportImagePath}>
          <img src={reportImagePath} class="w-full h-auto block" alt="Game Report" onerror="this.src='https://placehold.jp/24/333333/ffffff/400x500.png?text=REPORT%20LOADING...'" />
        </div>
        <div class="mt-6 text-center">
          <span class="text-[16px] font-black tracking-[0.2em] uppercase">
            {displayTeamAway} <span class="text-blue-500 mx-2 text-[12px]">vs</span> {displayTeamHome}
          </span>
        </div>
      </section>

      {[
        { data: awayData, label: displayTeamAway, color: "bg-white text-black" },
        { data: homeData, label: displayTeamHome, color: "bg-blue-600 text-white" }
      ].map((team) => (
        <section>
          <div class="px-8 mb-6 flex justify-between items-center">
            <span class={`${team.color} px-4 py-1.5 text-[15px] font-black uppercase rounded-sm`}>{team.label}</span>
          </div>

          <div class="flex overflow-x-auto snap-x gap-6 px-8 no-scrollbar pb-8">
            {team.data.length > 0 ? team.data.map((p) => (
              <div class="flex-none w-[80vw] max-w-[320px] snap-center">
                <div class="cursor-pointer card-trigger rounded-2xl overflow-hidden border border-white/10 bg-black/20" data-img={p.imagePath}>
                  <img src={p.imagePath} alt={p.name} class="w-full h-auto" loading="lazy" />
                </div>
                <div class="mt-6 px-1">
                  <div class="w-full inline-flex items-center justify-between px-6 py-4 rounded-full bg-black/40 border border-white/10">
                    <span class="text-[13px] font-black uppercase text-white truncate">{p.name}</span>
                  </div>
                </div>
              </div>
            )) : (
              <div class="px-8 w-full py-12 border border-dashed border-white/10 rounded-2xl text-center text-white/20 uppercase text-[10px] tracking-[0.4em]">No Player Cards</div>
            )}
          </div>
        </section>
      ))}
    </div>

    <div id="modal" class="fixed inset-0 bg-black/98 z-50 hidden flex-col items-center justify-center p-6 backdrop-blur-md">
      <div class="absolute top-8 right-8 text-white/40 text-4xl cursor-pointer p-4" id="close">&times;</div>
      <img id="modal-img" src="" class="max-w-full max-h-[85vh] shadow-2xl rounded-xl mb-12" />
      <a id="download-btn" href="" download class="bg-white text-black px-14 py-4 rounded-full font-black uppercase tracking-widest text-[11px]">Download Card</a>
    </div>
  </div>
</Layout>

<script>
  const modal = document.getElementById('modal');
  const modalImg = document.getElementById('modal-img') as HTMLImageElement;
  const close = document.getElementById('close');
  const downloadBtn = document.getElementById('download-btn') as HTMLAnchorElement;

  document.querySelectorAll('.card-trigger').forEach(card => {
    card.addEventListener('click', () => {
      const imgSrc = card.getAttribute('data-img');
      if (imgSrc && modalImg && downloadBtn) {
        modalImg.src = imgSrc;
        downloadBtn.href = imgSrc;
        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });

  close?.addEventListener('click', () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
  });
</script>

<style is:global>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>