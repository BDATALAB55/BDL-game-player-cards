---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

// 1. URLから ?folder= の値を取得する
const { searchParams } = Astro.url;
const queryFolder = searchParams.get('folder');

// --- 設定：リポジトリ情報 ---
const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const token = process.env.GITHUB_TOKEN;
const githubBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/players`;

// --- チームカラーマップ (NBA HOMEと完全一致) ---
const teamColorMap = {
  ATL: 'bg-[#E03A3E]', BOS: 'bg-[#007A33]', 
  BKN: 'bg-black border border-white/20', CHA: 'bg-[#00788C]',
  CHI: 'bg-[#CE1141]', CLE: 'bg-[#6F263D]', 
  DAL: 'bg-[#0053BC]', DEN: 'bg-[#0E2240]',
  DET: 'bg-[#1D428A]', GSW: 'bg-[#006BB6]', 
  HOU: 'bg-[#CE1141]', IND: 'bg-[#002D62]',
  LAC: 'bg-[#12173F]', LAL: 'bg-[#552583]', 
  MEM: 'bg-[#5D76A9]', MIA: 'bg-[#98002E]',
  MIL: 'bg-[#00471B]', MIN: 'bg-[#0C2340]', 
  NOP: 'bg-[#0C2340]', NYK: 'bg-[#F58426]',
  OKC: 'bg-[#007AC1]', ORL: 'bg-[#0077C0]', 
  PHI: 'bg-[#006BB6]', PHX: 'bg-[#1D1160]',
  POR: 'bg-[#E03A3E]', SAC: 'bg-[#5A2D81]', 
  SAS: 'bg-black border border-white/20', TOR: 'bg-[#CE1141]',
  UTA: 'bg-[#002B5C]', WAS: 'bg-[#002B5C]',
};

const getTeamStyle = (id) => teamColorMap[id] || 'bg-gray-700';

let folderName = queryFolder;

// --- 自動化：フォルダ名が未指定なら最新を取得 ---
if (!folderName) {
  try {
    const listApi = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/players`;
    const res = await fetch(listApi, {
      headers: token ? { "Authorization": `token ${token}` } : {}
    });
    const items = await res.json();
    
    if (Array.isArray(items)) {
      const dateFolders = items
        .filter(item => item.type === 'dir' && /^\d+$/.test(item.name))
        .sort((a, b) => b.name.localeCompare(a.name));

      if (dateFolders.length > 0) {
        const latestDateDir = dateFolders[0].name;
        const matchApi = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/players/${latestDateDir}`;
        const matchRes = await fetch(matchApi, {
          headers: token ? { "Authorization": `token ${token}` } : {}
        });
        const matchItems = await matchRes.json();
        
        if (Array.isArray(matchItems)) {
          const latestMatch = matchItems.find(m => m.type === 'dir' && m.name.startsWith('NBA_Cards_'));
          if (latestMatch) {
            folderName = `${latestDateDir}/${latestMatch.name}`;
          }
        }
      }
    }
  } catch (e) {
    console.error("Auto-fetch failed:", e);
    folderName = "260117/NBA_Cards_0022500593_20260117"; 
  }
}

const apiURL = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/players/${folderName}`;

let awayData = [];
let homeData = [];
let teamHome = "HOME";
let teamAway = "AWAY";
let reportImagePath = "";

const rawDate = folderName ? folderName.split('/')[0] : "";
const formattedDate = rawDate ? `20${rawDate.substring(0,2)}.${rawDate.substring(2,4)}.${rawDate.substring(4,6)}` : "NO DATA";

try {
  const response = await fetch(apiURL, {
    headers: token ? { "Authorization": `token ${token}` } : {}
  });
  const files = await response.json();

  if (Array.isArray(files)) {
    const playerFiles = files.filter(f => f.name.endsWith('.png')).map(f => f.name);
    const detectedTeams = [...new Set(playerFiles.map(f => f.split('_')[0]))].filter(t => t && t !== 'NBA');
    
    teamAway = detectedTeams[1] || "AWAY";
    teamHome = detectedTeams[0] || "HOME";

    const process = (teamName) => {
      return playerFiles
        .filter(f => f.startsWith(teamName))
        .map(f => {
          const p = f.replace('.png', '').split('_');
          return {
            team: p[0],
            no: p[1],
            name: p.slice(2).join(' '),
            imagePath: `${githubBase}/${folderName}/${f}`
          };
        }).sort((a, b) => parseInt(a.no) - parseInt(b.no));
    };

    awayData = process(teamAway);
    homeData = process(teamHome);
  }

  const gameIdMatch = folderName.match(/\d{10}/);
  const gameId = gameIdMatch ? gameIdMatch[0] : "";

  if (gameId) {
    const reportsApiURL = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/reports/NBA/${rawDate}`;
    const reportsRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/reports/NBA/${rawDate}`;

    const reportRes = await fetch(reportsApiURL, {
      headers: token ? { "Authorization": `token ${token}` } : {}
    });
    const reportFiles = await reportRes.json();

    if (Array.isArray(reportFiles)) {
      const matchFile = reportFiles.find(f => f.name.includes(gameId) && f.name.endsWith('.png'));
      if (matchFile) {
        reportImagePath = `${reportsRawBase}/${matchFile.name}`;
      }
    }
  }
} catch (e) {
  console.error("Fetch Error:", e);
}
---

<Layout title="BDL CARDS">
  <div class="app-container bg-[#373A36] min-h-screen text-white overflow-hidden font-avenir relative">
    
    <header class="pt-12 pb-6 px-8 border-b border-white/5 text-center">
      <a href="/nba" class="inline-block hover:opacity-70 transition-opacity">
        <h1 class="text-2xl font-black uppercase leading-none tracking-[0.25em]">BDL Cards</h1>
      </a>
      <p class="text-gray-600 text-[10px] font-bold tracking-[0.4em] mt-3 uppercase">Gameday Collection</p>
    </header>

    <div class="py-10 space-y-16 pb-32">
      <div class="px-8">
        <div class="flex flex-col gap-1">
          <span class="text-blue-500 text-[12px] font-black uppercase tracking-[0.3em]">Gameday</span>
          <span class="text-white text-[28px] font-bold uppercase leading-none tracking-[0.1em]">{formattedDate}</span>
        </div>
      </div>

      <section class="px-8 flex flex-col items-center">
        {reportImagePath ? (
          <div class="w-full md:w-[50%] mx-auto cursor-pointer card-trigger rounded-xl overflow-hidden border border-white/20 shadow-2xl active:scale-95 transition-transform" data-img={reportImagePath}>
            <img src={reportImagePath} alt="Game Report" class="w-full h-auto block" />
          </div>
        ) : (
          <div class="w-full py-10 text-center text-white/20 text-[10px] tracking-widest uppercase border border-dashed border-white/10 rounded-xl">
            Report Image Not Found
          </div>
        )}
        <div class="mt-4 text-center">
          <span class="text-[13px] font-black tracking-[0.2em] uppercase text-white/90 italic">
            {teamAway} <span class="text-[9px] font-medium text-white/40 mx-1 italic">vs</span> {teamHome}
          </span>
        </div>
      </section>

      {[awayData, homeData].map((team) => team.length > 0 && (
        <section>
          <div class="px-8 mb-8">
            <a href={`/nba-team?team=${team[0].team}`} class="inline-block group">
              <button class={`${getTeamStyle(team[0].team)} w-[105px] h-[45px] rounded-full text-[13px] font-black tracking-wider shadow-xl hover:scale-110 active:scale-95 transition-transform italic text-white flex items-center justify-center gap-1`}>
                {team[0].team}
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
                </svg>
              </button>
            </a>
          </div>

          <div class="flex overflow-x-auto snap-x snap-mandatory gap-6 px-8 no-scrollbar pb-4">
            {team.map((p) => (
              <div class="flex-none w-[78vw] max-w-[340px] snap-center">
                <div class="cursor-pointer card-trigger rounded-2xl overflow-hidden border border-white/10 shadow-xl active:scale-95 transition-transform" data-img={p.imagePath}>
                  <img src={p.imagePath} alt={p.name} class="w-full h-auto block" loading="lazy" />
                </div>
                
                <div class="mt-6 flex flex-col items-center px-1">
                    <div class="w-full inline-flex items-center justify-between px-6 py-4 rounded-full bg-black/40 border-2 border-transparent bg-clip-padding relative group overflow-hidden shadow-lg">
                      <div class="absolute inset-0 p-[1.5px] rounded-full bg-gradient-to-r from-blue-500 via-purple-500 to-red-500 -z-10 opacity-60"></div>
                      <span class="text-[13px] font-black tracking-[0.15em] uppercase text-white/90">{p.name}</span>
                    </div>
                </div>
              </div>
            ))}
          </div>
        </section>
      ))}
    </div>

    <div id="modal" class="fixed inset-0 bg-black/98 z-50 hidden flex-col items-center justify-center p-6 backdrop-blur-md">
      <div class="absolute top-8 right-8 text-white/40 text-4xl font-light cursor-pointer p-4 hover:text-white transition-colors" id="close">&times;</div>
      <img id="modal-img" src="" class="max-w-full max-h-[80vh] shadow-2xl rounded-xl mb-12 border border-white/10" />
      <a id="download-btn" href="" download class="bg-white text-black px-14 py-4 rounded-full font-black uppercase tracking-widest text-[11px] hover:bg-gray-200 transition-colors">Download Card</a>
    </div>

    <div class="fixed bottom-8 right-8 z-40">
      <a href="/nba" class="bg-gray-800 text-white px-8 py-4 rounded-full font-black text-[11px] uppercase tracking-widest shadow-2xl active:scale-95 hover:bg-gray-700 transition-all border border-white/10">
        Back to NBA Home
      </a>
    </div>
  </div>
</Layout>

<script>
  const modal = document.getElementById('modal');
  const modalImg = document.getElementById('modal-img') as HTMLImageElement;
  const close = document.getElementById('close');
  const downloadBtn = document.getElementById('download-btn') as HTMLAnchorElement;

  document.querySelectorAll('.card-trigger').forEach(card => {
    card.addEventListener('click', () => {
      const imgSrc = card.getAttribute('data-img');
      if (imgSrc && modalImg && downloadBtn) {
        modalImg.src = imgSrc;
        downloadBtn.href = imgSrc;
        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });

  close?.addEventListener('click', () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
  });

  // モダンの背景クリックでも閉じるように
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal?.classList.add('hidden');
      modal?.classList.remove('flex');
    }
  });
</script>

<style is:global>
  :root { font-family: "Avenir Next", sans-serif; }
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>