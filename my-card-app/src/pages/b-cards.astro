---
export const prerender = false;
import Layout from '../layouts/Layout.astro';

const { searchParams } = Astro.url;
const queryFolder = searchParams.get('folder'); 

const GITHUB_REPO = "BDATALAB55/BDL-game-player-cards";
const token = process.env.GITHUB_TOKEN;

// 1. URLパス解析 (例: folder=260104/game_505093_...)
const segments = queryFolder ? queryFolder.split('/') : [];
const dateOnly = segments[0] || ""; 
const matchSubDir = segments[1] || ""; 

// 親フォルダ名「B1 260104」形式
const actualDateDir = `B1 ${dateOnly}`; 

const githubRawBase = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/Bplayers/B1/${encodeURIComponent(actualDateDir)}/${encodeURIComponent(matchSubDir)}`;
const apiURL = `https://api.github.com/repos/${GITHUB_REPO}/contents/output/Bplayers/B1/${encodeURIComponent(actualDateDir)}/${encodeURIComponent(matchSubDir)}`;

let awayData = [];
let homeData = [];
let teamAwayFull = "AWAY";
let teamHomeFull = "HOME";
let reportImagePath = "";

const formattedDate = dateOnly ? `20${dateOnly.substring(0,2)}.${dateOnly.substring(2,4)}.${dateOnly.substring(4,6)}` : "NO DATA";

try {
  const response = await fetch(`${apiURL}?t=${Date.now()}`, {
    headers: token ? { "Authorization": `token ${token}` } : {}
  });
  const files = await response.json();

  if (Array.isArray(files)) {
    // フォルダ名(game_505093_SENDAI_UTSUNOMIYA_...)から「地名」を抽出
    const folderParts = matchSubDir.split('_');
    const awayCity = folderParts[2]; // SENDAI
    const homeCity = folderParts[3]; // UTSUNOMIYA

    const process = (cityPrefix) => {
      return files
        .filter(f => f.name.startsWith(cityPrefix) && f.name.endsWith('.png'))
        .map(f => {
          const nameParts = f.name.replace('.png', '').split('_');
          
          // 背番号(数字のみのセグメント)を動的に探す
          const numberIndex = nameParts.findIndex(p => /^\d+$/.test(p));
          const playerNo = numberIndex !== -1 ? nameParts[numberIndex] : "0";
          
          // 表示用のチーム名（地名＋愛称があれば結合）
          const displayName = numberIndex > 1 ? `${nameParts[0]} ${nameParts[1]}` : nameParts[0];

          return {
            teamLabel: displayName,
            no: playerNo,
            // 背番号以降を名前として結合
            name: nameParts.slice(numberIndex + 1).join(' '), 
            imagePath: `${githubRawBase}/${f.name}`
          };
        })
        .sort((a, b) => parseInt(a.no) - parseInt(b.no));
    };

    awayData = process(awayCity);
    homeData = process(homeCity);

    // 見出し用のチーム名を設定
    if (awayData.length > 0) teamAwayFull = awayData[0].teamLabel;
    if (homeData.length > 0) teamHomeFull = homeData[0].teamLabel;
  }

  // レポート画像
  const gameIdMatch = matchSubDir.match(/\d{6}/);
  const gameId = gameIdMatch ? gameIdMatch[0] : "";
  if (gameId) {
    reportImagePath = `https://raw.githubusercontent.com/${GITHUB_REPO}/main/output/reports/B1/${dateOnly}/${gameId}.png`;
  }

} catch (e) {
  console.error("Fetch Error:", e);
}
---

<Layout title="BDL B-CARDS">
  <div class="app-container bg-[#0a0a0a] min-h-screen text-white font-avenir">
    
    <header class="pt-12 pb-6 px-8 border-b border-white/5 text-center">
      <h1 class="text-2xl font-black uppercase tracking-[0.25em] text-blue-500">BDL B-Cards</h1>
      <p class="text-gray-500 text-[10px] font-bold tracking-[0.4em] mt-3 uppercase">{formattedDate}</p>
    </header>

    <div class="py-10 space-y-16 pb-32">
      {reportImagePath && (
        <section class="px-8 flex flex-col items-center">
          <div class="w-full md:w-[60%] mx-auto rounded-xl overflow-hidden border border-white/10 shadow-2xl card-trigger cursor-pointer" data-img={reportImagePath}>
            <img src={reportImagePath} alt="Game Report" class="w-full h-auto" onerror="this.style.display='none'" />
          </div>
          <div class="mt-8 text-center">
            <div class="flex items-center justify-center gap-4">
                <span class="text-[20px] font-black tracking-tighter uppercase">{teamAwayFull}</span>
                <span class="text-blue-500 font-black italic text-[14px]">VS</span>
                <span class="text-[20px] font-black tracking-tighter uppercase">{teamHomeFull}</span>
            </div>
          </div>
        </section>
      )}

      {awayData.length > 0 && (
        <section>
          <div class="px-8 mb-6">
            <span class="bg-white text-black px-5 py-1.5 text-[14px] font-black uppercase rounded-full shadow-lg">
              {teamAwayFull}
            </span>
          </div>
          <div class="flex overflow-x-auto gap-6 px-8 no-scrollbar pb-8 snap-x">
            {awayData.map((p) => (
              <div class="flex-none w-[82vw] max-w-[340px] snap-center group">
                <div class="card-trigger rounded-2xl overflow-hidden border border-white/10 shadow-2xl transition-transform duration-300 group-active:scale-95" data-img={p.imagePath}>
                  <img src={p.imagePath} alt={p.name} class="w-full h-auto block" loading="lazy" />
                </div>
                <div class="mt-4 flex items-center gap-3 px-2">
                    <span class="text-[24px] font-black text-blue-500 tabular-nums">#{p.no}</span>
                    <span class="text-[14px] font-bold tracking-widest uppercase text-white/90 truncate">{p.name}</span>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      {homeData.length > 0 && (
        <section>
          <div class="px-8 mb-6 text-right">
            <span class="bg-blue-600 text-white px-5 py-1.5 text-[14px] font-black uppercase rounded-full shadow-lg">
              {teamHomeFull}
            </span>
          </div>
          <div class="flex overflow-x-auto gap-6 px-8 no-scrollbar pb-8 snap-x">
            {homeData.map((p) => (
              <div class="flex-none w-[82vw] max-w-[340px] snap-center group">
                <div class="card-trigger rounded-2xl overflow-hidden border border-white/10 shadow-2xl transition-transform duration-300 group-active:scale-95" data-img={p.imagePath}>
                  <img src={p.imagePath} alt={p.name} class="w-full h-auto block" loading="lazy" />
                </div>
                <div class="mt-4 flex items-center gap-3 px-2">
                    <span class="text-[24px] font-black text-blue-500 tabular-nums">#{p.no}</span>
                    <span class="text-[14px] font-bold tracking-widest uppercase text-white/90 truncate">{p.name}</span>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}
    </div>

    <div id="modal" class="fixed inset-0 bg-black/95 z-50 hidden flex-col items-center justify-center p-6 backdrop-blur-xl">
      <div class="absolute top-8 right-8 text-white/40 text-4xl font-light cursor-pointer p-4 hover:text-white transition-colors" id="close">&times;</div>
      <img id="modal-img" src="" class="max-w-full max-h-[80vh] shadow-2xl rounded-xl mb-12 object-contain" />
      <a id="download-btn" href="" download class="bg-blue-600 text-white px-16 py-4 rounded-full font-black uppercase tracking-[0.2em] text-[12px] shadow-2xl active:scale-95 transition-all">Download Card</a>
    </div>
  </div>
</Layout>

<script>
  const modal = document.getElementById('modal');
  const modalImg = document.getElementById('modal-img') as HTMLImageElement;
  const close = document.getElementById('close');
  const downloadBtn = document.getElementById('download-btn') as HTMLAnchorElement;

  document.querySelectorAll('.card-trigger').forEach(card => {
    card.addEventListener('click', () => {
      const imgSrc = card.getAttribute('data-img');
      if (imgSrc && modalImg && downloadBtn) {
        modalImg.src = imgSrc;
        downloadBtn.href = imgSrc;
        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });

  close?.addEventListener('click', () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
  });
</script>

<style is:global>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
  body { background-color: #0a0a0a; }
</style>