---
import Layout from '../layouts/Layout.astro';

// チームリスト：サイズアップに合わせて調整
const teams = [
  { id: 'ATL', color: 'bg-[#E03A3E]' }, { id: 'BOS', color: 'bg-[#007A33]' },
  { id: 'BKN', color: 'bg-black border border-white/20' }, { id: 'CHA', color: 'bg-[#1D1160]' },
  { id: 'CHI', color: 'bg-[#CE1141]' }, { id: 'CLE', color: 'bg-[#6F263D]' },
  { id: 'DAL', color: 'bg-[#00538C]' }, { id: 'DEN', color: 'bg-[#0E2240]' },
  { id: 'DET', color: 'bg-[#C8102E]' }, { id: 'GSW', color: 'bg-[#1D428A]' },
  { id: 'HOU', color: 'bg-[#CE1141]' }, { id: 'IND', color: 'bg-[#FDB927] text-black' },
  { id: 'LAC', color: 'bg-[#1D428A]' }, { id: 'LAL', color: 'bg-[#552583]' },
  { id: 'MEM', color: 'bg-[#5D76A9]' }, { id: 'MIA', color: 'bg-[#98002E]' },
  { id: 'MIL', color: 'bg-[#00471B]' }, { id: 'MIN', color: 'bg-[#0C2340]' },
  { id: 'NOP', color: 'bg-[#0C2340]' }, { id: 'NYK', color: 'bg-[#F58426]' },
  { id: 'OKC', color: 'bg-[#007AC1]' }, { id: 'ORL', color: 'bg-[#0077C0]' },
  { id: 'PHI', color: 'bg-[#006BB6]' }, { id: 'PHX', color: 'bg-[#1D1160]' },
  { id: 'POR', color: 'bg-[#E03A3E]' }, { id: 'SAC', color: 'bg-[#5A2D81]' },
  { id: 'SAS', color: 'bg-black border border-white/20' }, { id: 'TOR', color: 'bg-[#CE1141]' },
  { id: 'UTA', color: 'bg-[#002B5C]' }, { id: 'WAS', color: 'bg-[#002B5C]' },
];

// ゲームレポート（画像パスは実際の保存場所に合わせて調整してください）
const reports = [
  { id: "20260120_PHX_PHI", away: "PHX", home: "PHI", img: "https://raw.githubusercontent.com/BDATALAB55/BDL-game-player-cards/main/output/reports/NBA/20260120_PHX_PHI.png" },
  { id: "20260120_CHI_LAC", away: "CHI", home: "LAC", img: "https://raw.githubusercontent.com/BDATALAB55/BDL-game-player-cards/main/output/reports/NBA/20260120_CHI_LAC.png" },
  { id: "20260120_HOU_SAS", away: "HOU", home: "SAS", img: "https://raw.githubusercontent.com/BDATALAB55/BDL-game-player-cards/main/output/reports/NBA/20260120_HOU_SAS.png" },
];
---

<Layout title="NBA HOME | B-Data Lab">
  <main class="bg-[#222222] min-h-screen text-white font-avenir pb-20">
    
    <header class="pt-16 pb-8 text-center px-6">
      <h1 class="text-7xl font-black tracking-tighter italic uppercase">NBA</h1>
      <div class="h-[15px] w-full max-w-5xl mx-auto bg-[#333333] mt-4 border-b border-white/5"></div>
    </header>

    <div class="max-w-6xl mx-auto px-6">
      
      <section class="mt-12">
        <h2 class="text-3xl font-black uppercase tracking-wider mb-8">TEAM</h2>
        <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 gap-y-5 gap-x-4">
          {teams.map(t => (
            <div class="flex justify-center">
              <button class={`${t.color} w-[100px] h-[45px] rounded-full text-[14px] font-black tracking-wider shadow-xl hover:scale-110 transition-transform italic`}>
                {t.id}
              </button>
            </div>
          ))}
        </div>
      </section>

      <section class="mt-24">
        <h2 class="text-4xl font-black uppercase tracking-wider mb-2">GAME REPORT</h2>
        <p class="text-[11px] font-bold text-blue-500 tracking-[0.2em] mb-10">LATEST UPDATE <span class="ml-2 text-white/60">2026.01.20</span></p>

        <div class="flex overflow-x-auto gap-8 no-scrollbar snap-x pb-4">
          {reports.map(r => (
            <div class="flex-none w-[300px] snap-center">
              <div class="rounded-xl overflow-hidden shadow-[0_20px_50px_rgba(0,0,0,0.5)] border border-white/10 bg-black/20 aspect-[2/3]">
                <img 
                  src={r.img} 
                  alt={`${r.away} vs ${r.home}`} 
                  class="w-full h-full object-cover" 
                  onerror="this.src='https://placehold.jp/24/333333/ffffff/400x600.png?text=REPORT%0ACOMING%20SOON'"
                />
              </div>
              <div class="mt-6 flex justify-center">
                <div class="bg-black/80 px-6 py-2 rounded-full border border-white/10 text-[11px] font-black uppercase tracking-[0.2em]">
                  {r.away} <span class="text-blue-500 mx-1">vs</span> {r.home}
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="mt-16 flex justify-center">
          <a href="/nba-reports" class="bg-[#CE1141] hover:bg-red-700 text-white px-12 py-5 rounded-full text-sm font-black uppercase tracking-[0.25em] shadow-2xl transition-all active:scale-95 inline-block">
            Game Report Archive
          </a>
        </div>
      </section>

      <section class="mt-32">
        <h2 class="text-4xl font-black uppercase tracking-tighter mb-10 italic">STANDING</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <button class="bg-[#555555] py-5 rounded-xl text-black font-black uppercase tracking-widest text-left px-10 hover:bg-gray-300 transition-colors shadow-lg">
            Eastern Conference
          </button>
          <button class="bg-[#555555] py-5 rounded-xl text-black font-black uppercase tracking-widest text-left px-10 hover:bg-gray-300 transition-colors shadow-lg">
            Western Conference
          </button>
        </div>
      </section>

      <section class="mt-24 mb-20">
        <h2 class="text-4xl font-black uppercase tracking-tighter mb-10 italic">Today's RANK10</h2>
        <div class="flex gap-4">
          <button class="bg-[#555555] px-10 py-4 rounded-xl text-black font-black uppercase tracking-widest text-sm shadow-lg">PTS</button>
          <button class="bg-[#555555] px-10 py-4 rounded-xl text-black font-black uppercase tracking-widest text-sm shadow-lg">REB</button>
        </div>
      </section>

    </div>

    <footer class="py-12 text-center opacity-20 border-t border-white/5">
      <p class="text-[10px] font-black tracking-[0.5em] uppercase">B-Data Lab / NBA Portal</p>
    </footer>
  </main>
</Layout>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>