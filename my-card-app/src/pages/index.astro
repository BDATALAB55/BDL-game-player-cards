---
import Layout from '../layouts/Layout.astro';
---

<Layout title="BDL PORTAL">
  <div class="bg-[#373A36] min-h-screen text-white font-avenir flex flex-col items-center justify-center px-8">
    <header class="mb-16 text-center">
      <h1 class="text-3xl font-black uppercase tracking-[0.3em] mb-2">BDL CARDS</h1>
      <p class="text-gray-500 text-[10px] font-bold tracking-[0.5em] uppercase">Select League</p>
    </header>

    <div class="grid grid-cols-1 gap-6 w-full max-w-sm">
      <a href="/nba-reports" class="group relative overflow-hidden rounded-2xl border border-white/10 bg-gray-900/50 p-8 transition-all active:scale-95">
        <div class="flex items-center justify-between relative z-10">
          <div>
            <span class="text-blue-500 text-[10px] font-black uppercase tracking-widest block mb-1">North America</span>
            <h2 class="text-2xl font-black tracking-tighter">NBA</h2>
          </div>
          <div class="bg-white/5 p-3 rounded-full group-hover:bg-blue-600 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/></svg>
          </div>
        </div>
      </a>

      <div class="opacity-30 rounded-2xl border border-white/5 bg-black/20 p-8">
        <div class="flex items-center justify-between">
          <div>
            <span class="text-gray-500 text-[10px] font-black uppercase tracking-widest block mb-1">Japan Professional</span>
            <h2 class="text-2xl font-black tracking-tighter text-gray-400">B.LEAGUE</h2>
          </div>
          <span class="text-[9px] font-bold bg-white/10 px-2 py-1 rounded">COMING SOON</span>
        </div>
      </div>

      <div class="opacity-30 rounded-2xl border border-white/5 bg-black/20 p-8">
        <div class="flex items-center justify-between">
          <div>
            <span class="text-gray-500 text-[10px] font-black uppercase tracking-widest block mb-1">Europe</span>
            <h2 class="text-2xl font-black tracking-tighter text-gray-400">EURO LEAGUE</h2>
          </div>
          <span class="text-[9px] font-bold bg-white/10 px-2 py-1 rounded">COMING SOON</span>
        </div>
      </div>
    </div>
  </div>
</Layout>